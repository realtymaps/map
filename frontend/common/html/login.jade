.container.login-page(ng-show="!loginInProgress")
  .centered
    .row
      .logo.center-block(ng-click="page.goToMainOrLogin()")
        img(src="/assets/logo.png")
    .row
      .col-md-4.col-md-offset-4
        .text-center(ng-show="!showForm")
          h3 You are signed in as {{identity.user.email}}
          .btn.btn-info(ng-click="showForm = true") Login Again
        form.comfy(method="POST", ng-submit="doLogin()" ng-show="showForm")
          .form-group
            label(for="email") Email:
            input#email(type="email" name="email" ng-model="form.email")
          .form-group
            label(for="password") Password:
            input#password(ng-show="!form.loginToken" type="password" name="password" ng-model="form.password")
          .form-group(ng-show="form.loginToken")
            label(for="loginToken") Login Token:
            input#loginToken(type="text" name="loginToken" ng-model="form.loginToken")
          .form-group.forgot(ng-show="loginFailed")
            label Oops, that wasn't right.
            .btn.btn-sm.btn-warning.pull-right(ng-click="forgotPassword()") Forgot password?
          .row.form-group
            .col-md-6
              input(type="submit",value="Log In")
            .col-md-6.checkbox-replace
              input#remember_me(type="checkbox" name="remember_me" ng-model="form.remember_me")
              label(for="remember_me") Keep me logged in
