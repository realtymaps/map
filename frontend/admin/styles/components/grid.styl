.grid-container
  width 100%
  padding 1% 0 1% 1%
  overflow-y scroll

  *
  *:after
  *:before
    transition width 0ms, height 0ms, padding 0ms, margin 0ms

  .nav > li > a
    padding: 5px 10px

  .ui-grid
    margin 20px 0
    color black

  .clickable-cell
  .clickable-rows .ui-grid-cell
    cursor pointer

  .clickable-cell:hover
  .clickable-rows .ui-grid-row:hover .ui-grid-cell
    background-color rgb(179, 196, 199)

  .summary-grid
    width 100%
    height 200px !important

  .grid
    color black
    width 100%
    height 300px

  .numberCell
    text-align: right

  .ui-grid-footer-cell
    padding 5px

  .large-input
    position fixed
    width 600px
    height 200px
    z-index 5

    .ui-select-container
      width 300px
      height 200px
      overflow-y auto
      span
        display block

  .json-input
    font-family "courier new"

  .ng-invalid-json
    background-color #fdd

  .summary-grid .ui-grid-canvas .ui-grid-row:first-child .ui-grid-cell
    border-bottom 2px solid #CCC

  select
    color black

  .ui-grid-header-viewport, .ui-grid-footer-viewport
    background-color: $dark_blue_darker

  .ui-grid-header-canvas, .ui-grid-footer-canvas
    background-color: $grey_ui_grid

  ui-select-wrap
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;

  /* Make sure the container doesn't shrink too small */
  .ui-select-container
    min-width: 100px;
    overflow: visible;
    z-index: 99999;

.ui-select-bootstrap
  .ui-select-choices-row
    span
      color $white

.ui-grid-cell-contents
  &.many-fields:hover
    position absolute
    background-color $white
    max-height: 20px
    max-width: 500px
    font-weight: bold

.ui-select-choices-row, .ui-select-choices-row-inner
  &:hover
    background-color $gray_darkest !important

.ui-select-choices
  overflow-y auto
