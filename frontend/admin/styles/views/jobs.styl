.jobs
  position absolute
  left 0
  width 100%
  padding 1%
  
  *
  *:after
  *:before
    transition width 0ms, height 0ms, padding 0ms, margin 0ms

  .nav > li > a
    padding: 5px 10px
  
  .ui-grid
    margin 20px 0
    color black

  .summary-grid
    width 100%
    height 200px !important

  .jobs-grid
    color black
    width 100%
    height 400px

  .numberCell
    text-align: right

  .ui-grid-footer-cell
    padding 5px

  .json-input
    position fixed
    width 600px
    height 200px
    font-family "courier new"
    z-index 5

  .ng-invalid-json
    background-color #fdd
    
  .summary-current
    border-bottom: 2px solid #CCC
