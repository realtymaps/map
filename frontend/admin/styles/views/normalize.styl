body
  overflow auto

.normalize-container
  width 100%

.mls-select
  select
    margin 1em

.page
  position relative
  top 0

.panel
  border-radius 0

  .panel-body
    background-color white
    color black
    padding 5px
    font-size 12px
    border-radius 0
    border 0

.field, .category
  border 2px solid transparent
  margin 3px
  display inline-block
  padding 6px 12px
  margin-bottom 0
  text-align center
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none
  border-radius 4px

  .datatype
    margin-left 1em
    color black
    background-color white
    padding 3px
    border-radius 5px
    font-size 75%
    opacity 0.8

    &:before
      padding 0.25em
    &.datatype-string:before
      content: "abc"
    &.datatype-number:before
      content "123"
    &.datatype-yn:before
      content "yes/no"
    &.datatype-date:before
      content "date"

.field
  display block
  text-align left

  color #fff
  background-color #5bc0de
  border-color #46b8da
  &.assigned
    background-color #aaa
    border-color #999
  &.composite:before
    content 'RM'
    background-color #313145
    margin-right 1em
    padding 3px
    border-radius 5px
    font-size 75%
    opacity 0.8
  &.invalid
    background-color #ffa07a
    border-color #efa07a

.category
  display inline-block
  vertical-align top
  width 30%
  min-height 4em

  color #fff
  background-color #f0ad4e
  border-color #eea236

  .field-list
    max-height 200px
    overflow-y scroll

.field-container, .category-container
  border 2px solid transparent
  overflow-y scroll
  height 450px
  padding 2px

.properties-container
  height 40%
  overflow scroll
  position fixed !important
  bottom 0
  width 80%
  color black
  .row
    min-height 30px
  input
    width 90%

  -webkit-transition  0.5s all linear
  transition all linear 0.5s
  opacity 1

  .field
    display inline-block
    span
      margin-right 0.5em
  .field.empty
    background-color transparent
    color #888
    border 2px dashed #888
    &:before
      content "Drag here:"
      padding-right 0.5em

.properties-container.ng-hide
  opacity 0

h4
  color black
  text-transform capitalize

.category.rmaps-drop-target
  border  2px dashed #888

.category.rmaps-drag-over, .field.rmaps-drag-over
  -webkit-filter invert(20%)
  filter invert(20%)

.transform
  width 100%

.clickable-icon
  background-color lightgray
  border-radius 0.5em
  padding 0em 0.35em
  font-weight bold
  z-index 5
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.close-icon
  @extend .clickable-icon
  position absolute
  right 1em
  top 1em
    content

.remove-icon
  @extend .clickable-icon
  float right