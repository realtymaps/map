body
  overflow auto

.normalize-container
  width 100%

select
  margin 1em

.page
  position relative
  top 0

.panel
  border-radius 0
  height 400px

  .panel-body
    background-color white
    color black
    padding 5px
    font-size 12px
    border-radius 0
    border 0

.field, .category
  margin 3px
  overflow hidden
  text-overflow ellipsis

  .datatype
    margin-left 1em
    color black
    background-color white
    padding 3px
    border-radius 10px
    font-size 75%
    opacity 0.8

    &.datatype-string:before
      padding 1em
      content: "abc"
    &.datatype-number:before
      padding 1em
      content "123"
    &.datatype-yn:before
      padding 1em
      content "yes/no"

.field
  display block
  text-align left

.category
  display inline-block
  vertical-align top
  width 30%
  min-height 4em

.field-container, .category-container
  overflow-y scroll
  height 100%

.properties-container
  color black

h3
  color black

.rmaps-drop-target
  background-color white
  color #f0ad4e