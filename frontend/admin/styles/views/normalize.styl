.clickable-icon
  color black
  background-color lightgray
  border-radius 0.5em
  padding 0em 0.35em
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
  -ms-user-select none
  user-select none

.normalize-container
  .row-slim
    margin 0px !important
  .row
    margin 10px
  label
    color: $black
    font-weight bold
  width 100%

  .mls-select
    select
      margin 1em

  .page
    position relative
    top 0

  .panel
    border-radius 0

    .panel-body
      background-color white
      color black
      padding 5px
      font-size 12px
      border-radius 0
      border 0

  .field, .category
    border 2px solid transparent
    margin 3px
    display inline-block
    padding 6px 12px
    text-align center
    cursor pointer
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    border-radius 4px

    .datatype
      margin-left 1em
      color black
      background-color white
      padding 3px
      border-radius 5px
      font-size 75%
      opacity 0.8

      &:before
        content: "?"
        padding 0.25em
      &.string:before
        content: "abc"
      &.integer:before
        content "123"
      &.float:before
        content "12.34"
      &.boolean:before
        content "yes/no"
      &.datetime:before
        content "99-12-31"
      &.array:before
        content "[ab,cd]"

  .placeholder-field
    border 2px solid transparent
    margin 3px
    display block
    padding 6px 12px
    text-align center
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    border-radius 4px
    background-color #ccc
    color #000

  selectable(text, background, border, invert=true)
    color text
    background-color background
    border-color border
    &.selected
      font-weight bold
      if invert
        background-color text
        color background

  .field
    display block
    text-align left

    selectable #fff, #5bc0de, #46b8da

    &.assigned
      selectable #fff, #aaa, #999
    &.categorized
      selectable #fff, #6ec878, #3eb848
    &.base
      text-transform capitalize
      selectable #fff, #6ec878, #3eb848
    &.base:before
      content 'RM'
      color #fff
      background-color #313145
      margin-right 1em
      padding 3px
      border-radius 5px
      font-size 75%
      opacity 0.8
    &.invalid
      selectable #fff, #de7f79, #be5f59
    &.category-item
      selectable #000, #ddd, #aaa, false

  .category
    display inline-block
    vertical-align top
    width 32%
    min-height 4em

    color black
    background-color #ddd
    border-color #aaa

    &.collapse .field-list
      max-height 200px
      overflow-y scroll

  .list-container
    padding 2px
    h4
      text-align center

  .field-container
    overflow-y scroll
    height 475px
    padding-left 10px

  .filter-container
    padding-left: 13px
    input
      width: 100%
      color: black

  .properties-container
    padding 10px
    color black
    border 1px solid $gray
    box-shadow 4px 4px 20px $black_50

    input, textarea
      width 90%
      border 1px solid #ddd
      padding 5px
      &[disabled]
        color #888
        background-color #eee
        cursor not-allowed

    textarea
      margin-top 20px
      top 20px
      font-family courier, fixed

    .inputTextarea
      margin-top -5px

  .scroll
    overflow-y scroll
    .row
      padding 1em 0
      line-height 1em

    .row:not(.lookup)
      height 3em
      > div
        top 50%
        transform translateY(-50%)

    .row:nth-child(even)
      background-color #eee
    .row.advanced > :first-child
        text-align center

    .btn
      padding 5px
      margin 5px

    opacity 1

    .field
      display inline-block
      span
        margin-right 0.5em
    .field.empty
      background-color transparent
      color #888
      border 2px dashed #46b8da
      &:before
        content "Drag here:"
        padding-right 0.5em

    .help
      color #555
      font-size 90%

    .sep
      margin 12px
      font-weight bold

  .properties-container.ng-hide
    opacity 0

  h4
    color black
    text-transform capitalize

  .category.rmaps-drop-target
    border 2px dashed #46b8da

  .category.rmaps-drag-over, .field.rmaps-drag-over
    -webkit-filter invert(20%)
    filter invert(20%)

  .transform
    width 100%

  .close-icon
    @extend .clickable-icon
    z-index 1
    position absolute
    right 10px
    top 12px
    &.fa
      font-size 125%

  .close-fieldData-icon
    @extend .clickable-icon
    z-index 1
    right 20px
    position absolute

  .remove-icon
    @extend .clickable-icon
    float right

  .header-button
    margin-top 10px
    font-size 12px
    padding 2px
    height 22px
    background-color #35a7e0 !important

  .download-csv-input
    margin-top 10px
    font-size 12px
    height 22px

  .expand-icon
    @extend .clickable-icon
    position absolute
    font-wieght auto
    right 3px
    top 3px
    &:before
      content "-"

  .collapse .expand-icon:before
      content "+"

  .global-rules
    background-color white
    color black
    padding 10px
    border 2px solid #999

  .dropdown-menu
    width 400px
