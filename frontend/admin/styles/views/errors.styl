.errors
  margin 0
  a
    color #aaa
    cursor pointer
    &:hover
      color #fff

  .container
    margin 0
    width 96%

  .opts
    display table

  .row
    height 100%
    width 100%
    >*
      height 100%
      overflow hidden
      text-overflow ellipsis
      line-height 2em
    .vert-scroll
      overflow-y auto
      height 3em
    .break-all
      word-break break-all

  .parent
    font-size 115%

  .details
    display table
    table-layout fixed
    padding-top 9px
    padding-bottom 9px
    .row
      padding-top 6px
      display table-row
    pre
      border 0
      color $white
      padding 0
      margin 0

  .error
    .parent
      height 50px

  .parent
    cursor pointer
    padding-top 9px

  .badge
    border-radius 3px
    background-color $gray_lightest !important
    color $gray_darkest

  .heading
  .parent:hover
    font-weight bold

  .table-striped-pair
    .error
      border-left 3px solid $dark_blue_darker
      border-right 3px solid $dark_blue_darker
    > :nth-child(even)
      &.expanded
        border-top 3px solid
        border-bottom 3px solid
        border-color: $light_blue_lighter
      &, & *:not(.btn):not(.fa)
        background-color $gray_darker
    > :nth-child(odd)
      &.expanded
        border-top 3px solid
        border-bottom 3px solid
        border-color: $light_blue_lighter
      &, & *:not(.btn):not(.fa)
        background-color $gray_darkest
    .error.expanded .parent
      &, & *:not(.btn):not(.fa)
        background-color: $light_blue


  *[disabled]
    text-decoration line-through
    pointer-events none

  .handled-button
    margin-top: -2px
