.errors
  margin 0
  a
    color #aaa
    cursor pointer
    &:hover
      color #fff

  .container
    margin 0
    width 96%

  .opts
    display table

  .row
    height 100%
    width 100%
    >*
      padding 10px
      height 100%
      overflow hidden
      text-overflow ellipsis
      line-height 2em
    .vert-scroll
      overflow-y auto
      height 3em
    .break-all
      word-break break-all

  .parent
    font-size 115%

  .details
    display table
    table-layout fixed
    .row
      display table-row
      >*
        padding 5px
    pre
      border 0
      color $white
      padding 0
      margin 0

  .error
    height 50px

  .parent
    cursor pointer

  .badge
    border-radius 3px
    background-color $gray_lightest !important
    color $gray_darkest

  .heading
  .parent:hover
    font-weight bold

  .table-striped-pair
    > :nth-child(4n+0)
    > :nth-child(4n+1)
      background-color $gray_darker
      *:not(.btn):not(.fa)
        background-color $gray_darker
    > :nth-child(4n+2)
    > :nth-child(4n+3)
      background-color $gray_darkest
      *:not(.btn):not(.fa)
        background-color $gray_darkest

  *[disabled]
    text-decoration line-through
