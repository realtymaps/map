$wizardPaneWidth = 775px
$wizardPaneHeight = 250px

mlsPanels()
  .panel > .panel-heading
    background-color: #337ab7
    padding: 1em

  .panel > .panel-body
    border: 0
    padding: 1em
    overflow: auto
    table
      width: 100%

mlsIcon()
  .mls-icon
    margin: 10px
    width: 80px

.mls-selection
  margin-bottom: 10px

.mls-config-modal
  mlsPanels()

  .icon-list
    mlsIcon()
    .selected
      border: 1px solid #444
      border-radius: 8px


.mls-container
  .sep
    border-bottom 1px solid black
    td
      padding-bottom 5px

    .sep-photos
      margin-left 50%

  padding-top: 3px

  a.accordion-toggle
    display: inline-block
    padding: 14px
    width: 100%

  mlsPanels()
  .panel > .panel-body
    overflow: scroll
  .main-config-panel .panel .panel-heading
    padding: 0

  mlsIcon()

  *, h1, h2, h3, h4, h5, h6
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
    color: #000

  table tr td:first-of-type
    width: 20%

  .nav *, .panel-heading
    letter-spacing: 0.2em

  .nav-pills li a
    border-radius: 0

  .nav-pills li.active
    a, a:hover, a:focus
      color: black
      background-color: white !important

  .data-entry
    font-family: "Courier New", fixed
    padding-left: 1em

  .pad-left
    padding-left: 1em

  .data-label
    font-size: 16px
    font-weight: bold
    text-align: left;

  .config-container
    position: relative

  .config-panel
    position: absolute
    width: 100%
    text-align: center
    top: 0px
    z-index: 999


  .select-pill
    opacity: 1
    position: relative
    top: 72px
    background-color: black
    width: 300px
    color: white
    font-size: 20px
    border-radius: 10px
    padding: 10px
    margin: auto
    z-index: 999

  .main-config-panel
    z-index: 1
    .photo-objects-text
      width: 100%

    .photo-info
      .main-link
        font-weight: bold
        font-style: italic
        color: $rm-link

  .progressPills ul
    margin: auto

  .wizardContent
    position: absolute

  .loading-show
    background: rgba(0, 0, 0, 0.3)

  .loading-panel
    text-align: center
    font-size: 20px;
    font-weight: bold;

  .loading-image
    margin-top: 50px
    width: 50px
    height: 50px

  .loading-bg
    z-index: 10

  .loadingfade
    opacity: 0.1

  .half-opacity
    opacity: 0.5

  .fourth-opacity
    opacity: 0.25

  button
    margin-right: 1em

  .config-tr td
    background-color: #FFFF44

  input[type="checkbox"]
    height: 15px
    width: 15px
    margin: 0
    cursor: pointer
