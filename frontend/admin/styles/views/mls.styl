$wizardPaneWidth = 775px
$wizardPaneHeight = 250px

.data-entry
  font-size: 16px
  font-weight: normal
  padding-left: 10px

.data-label
  font-size: 16px
  font-weight: bold
  text-align: left;

.panel
  border-radius 10px

.panel > .panel-heading
  background-color rm-medium-blue
  border none
  font-size 14px
  border-top-right-radius 10px
  border-top-left-radius 10px
  padding 5px 10px

.panel > .panel-body
  background-color white
  color #000
  padding 5px
  font-size 12px
  border-bottom-right-radius 10px
  border-bottom-left-radius 10px
  border 1px solid rgb(157,157,157)
  position: relative
  
.animate-container {
  position: relative
  height: $wizardPaneHeight
  width: 100%
}

.animate-show {
  position: absolute
  overflow: hidden
  height: $wizardPaneHeight
  width: 100%
  left: 0
}

.animate-show.ng-hide-add.ng-hide-add-active,
.animate-show.ng-hide-remove.ng-hide-remove-active {
  top: 0
  left: 0
  -webkit-transition: all ease 0.5s
  transition: all ease 0.5s
}

.animate-show.ng-hide {
  top: 0
  left: $wizardPaneWidth
  width: 0%
}

.progressPills ul
  margin: auto
  
.submitButton
  bottom: 0
  
.model-content
  border-radius: 10px