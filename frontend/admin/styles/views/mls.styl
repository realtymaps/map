$wizardPaneWidth = 775px
$wizardPaneHeight = 250px

*, h1, h2, h3, h4, h5, h6
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
  color: #000

.nav *, .panel-heading
  letter-spacing: 0.2em

.nav-pills li a
  border-radius: 0

.nav-pills li.active
  a, a:hover, a:focus
    color: black
    background-color: white !important

.data-entry
  font-family: "Courier New", fixed
  padding-left: 1em

.pad-left
  padding-left: 1em

.data-label
  font-size: 16px
  font-weight: bold
  text-align: left;

.panel > .panel-heading
  background-color: #337ab7
  padding: 1em

.panel > .panel-body
  border: 0
  padding: 1em
  overflow: scroll
  table
    width: 100%

.animate-container {
  position: relative
  height: $wizardPaneHeight
  width: 100%
}

.animate-show, .loading-show
  position: absolute
  overflow: hidden
  height: $wizardPaneHeight
  width: 100%
  left: 0

.animate-show.ng-hide-add.ng-hide-add-active,
.animate-show.ng-hide-remove.ng-hide-remove-active {
  top: 0
  left: 0
  -webkit-transition: all ease 0.5s
  transition: all ease 0.5s
}

.animate-show.ng-hide {
  top: 0
  left: $wizardPaneWidth
  width: 0%
}

.progressPills ul
  margin: auto

.wizardContent
  position: absolute
  
.loading-show
  background: rgba(0, 0, 0, 0.3)
    
.loading-panel
  text-align: center
  font-size: 20px;
  font-weight: bold;

.loading-image
  margin-top: 50px
  width: 50px
  height: 50px

.loading-bg
  z-index: 10

.loadingfade
  opacity: 0.1
