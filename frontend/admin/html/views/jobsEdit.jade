.row.form-group
  .col-md-2
    .btn.btn-primary(ng-click="create()" ng-show="!nameExists" ng-disabled="!recordName") New {{gridName}}
    .btn.btn-danger(ng-click="delete()" ng-show="nameExists") Delete {{gridName}}
  .col-md-2
    input.form-control(required placeholder="enter name" ng-model="recordName" ng-change="exists()")

.jobs-grid(cg-busy="gridBusy" ui-grid="grid" ui-grid-resize-columns ui-grid-edit)
