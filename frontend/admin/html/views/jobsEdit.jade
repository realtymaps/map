.row.form-group
  .col-md-1
    .btn.btn-primary(ng-click="create()" ng-show="!nameExists" ng-disabled="!recordName") New {{gridName}}
    .btn.btn-danger(ng-click="delete()" ng-show="nameExists") Delete {{gridName}}
  .col-md-2
    input.form-control(required placeholder="enter name" ng-model="recordName" ng-change="exists()")
  .col-md-2
    form(ng-submit="load()")
      input.form-control(required placeholder="enter name filter" ng-model="nameFilters")
      input.hidden-submit(type="submit")
  .col-md-2
    .btn.btn-primary.reload.job-reload(ng-click="load()")
      img(src="../../assets/reload-arrow.png" width="10" height="10")

.jobs-grid(cg-busy="gridBusy" ui-grid="grid" ui-grid-resize-columns ui-grid-edit ui-grid-auto-resize ui-grid-pinning)
