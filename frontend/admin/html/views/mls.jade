div
  form(name="mlsForm")
    .col-md-12
      .row
        .col-md-6
          .progressPills
            tabset(type="pills")
              tab(ng-repeat="formItem in formItems track by $index" heading="{{formItem.heading}}" disable="formItem.disabled" active="formItem.active()" ng-click="!formItem.disabled && proceedTo($index)")
        .col-md-6
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading
              h3 MLS Data Entry
            .panel-body
              div.animate-container.wizardContent
                div(ng-repeat="formItem in formItems" ng-show="formItem.step == step").animate-show
                  ng-form(ng-if="formItem.step == 0" name="step0")
                    select(type="text" ng-model="mlsData.id" ng-options="idOptions" ng-click="")
                    button(ng-click="open()") Create New MLS Config
                    div.submitButton
                      button(ng-click="proceedTo(1)" ng-disabled="step0.$valid") Submit

                  div(ng-if="formItem.step == 1")
                    table
                      tr
                        td
                          label.data-label Database:
                        td
                          select(type="text" ng-model="mlsData.main_property_data.db" ng-options="dbOptions")
                  div(ng-if="formItem.step == 2")
                    table
                      tr
                        td
                          label.data-label Table:
                        td
                          select(type="text" ng-model="mlsData.main_property_data.table" ng-options="tableOptions")
                  div(ng-if="formItem.step == 3")
                    table
                      tr
                        td
                          label.data-label Field:
                        td
                          select(type="text" ng-model="mlsData.main_property_data.field" ng-options="fieldOptions")
                      tr
                        td
                          label.data-label Formatting:
                        td
                          input(type="text" ng-model="mlsData.main_property_data.queryTemplate")







