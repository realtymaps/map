.panel.panel-default
  .panel-heading
    h3 Create New MLS Config
  .panel-body
    form(name=newMlsForm)
      button(ng-click="clear()").btn.btn-primary Clear for new MLS
      table
        tr
          td
            label.data-label ID:
          td
            input(type="text" ng-model="mlsModalData.id" ng-disabled="editing")
        tr
          td
            label.data-label Name:
          td
            input(type="text" ng-model="mlsModalData.name")
        tr
          td
            label.data-label URL:
          td
            input(type="text" ng-model="mlsModalData.url")
        tr
          td
            label.data-label Username:
          td
            input(type="text" ng-model="mlsModalData.username")
        tr
          td
            label.data-label Password:
          td
            input(type="password" ng-model="mlsModalData.password")
        tr
          td
            label.data-label Notes:
          td
            textarea(ng-model="mlsModalData.notes")
        tr
          td
            label.data-label Active:
          td
            input(type="checkbox" ng-model="mlsModalData.active")


      button(ng-click="ok()").btn.btn-success Save
      button(ng-click="cancel()").btn.btn-danger Cancel
