include ../mixins/_avatarMixin.jade

#userblock(ng-controller="DropdownCtrl")
  span(class="dropdown" uib-dropdown on-toggle="toggled(open)")
    button(class="dropdown-toggle avtr" uib-dropdown-toggle)
      +avatarMixin()(class='tiny-avatar')
    ul(class="dropdown-menu right arrow")
      li(ng-show="principal.isAuthenticated()", ng-cloak)
        a.logout(ui-sref="logout") Sign Out
      li(ng-show="principal.isAuthenticated()", ng-cloak)
        a(ui-sref="user") {{user.email}}
      li(ng-show="principal.isStaff()", ng-cloak)
        a(href="{{adminRoutes.index}}" target="_self") Admin

      .block-become-a-member
        h4 trial period
        p 30 days left
        button(class='btn btn-primary') become a member
