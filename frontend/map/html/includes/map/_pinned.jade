include ../mixins/property/_propertyAttributes.jade
include ../mixins/_circleNrMixin.jade

span(ng-controller="rmapsPinnedCtrl" class="dropdown btn-group pinned-list" dropdown)
  button(class="dropdown-toggle btn btn-transparent pinned" dropdown-toggle)
    span.icon.icon-pin

  .dropdown-menu.whiteblock.no-margin
    .fixed-header
      span
        a {{pinnedTotal}} Pinned Properties
    .inner
      ul
        li(ng-repeat="(id, pin) in pinned")
          a {{pinnedTotal}}
            span.enity
              +circleNrMixin('{{$index+1}}')
              span.content
                span(class="status" ng-class="formatters.results.getStatusLabelClass(pin,true)") {{pin.rm_status}}
                +propertyAttributes('pin')
            span.actions
              span.unpin
                span.action Unpin
                span.icon.icon-pin
