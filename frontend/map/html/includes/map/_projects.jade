span(class="dropdown btn-group projects-list" dropdown on-toggle="toggled(open)")
  button(class="dropdown-toggle btn btn-transparent" dropdown-toggle)
    span
      span.icon.icon-project
      h4 {{selectedProject.title}}
    span.caret
  ul(class="dropdown-menu whiteblock no-margin")
    li.count
      //TODO: use frontend routes!
      a(ng-show="projectsTotal == 1" href="{{frontendRoutes.projects}}") {{projectsArray.length}} Project
      a(ng-show="projectsTotal != 1" href="{{frontendRoutes.projects}}") {{projectsArray.length}} Projects
    li(ng-repeat="project in projects" ng-click="selectProject(project)" )
      a
        span.enity
          span.icon.icon-project
          span.title
            h3 {{project.name}}
            span.count {{project.totalPropertiesSelected}} Properties
        span.actions
          span.icon.icon-save_on_disk
          span.icon.icon-checked
          span.icon.icon-remove
