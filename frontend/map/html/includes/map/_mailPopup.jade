.small-details.panel.panel-primary( ng-controller='rmapsMapSmallDetailsCtrl' ng-cloak)
  .panel-heading(ng-class="statusClass") {{street_address_num}} {{street_address_name}}
  .panel-body
    table(class="table table-condensed table-hover")
      tr
        td(colspan="2") {{beds_total}} Bed &nbsp; {{baths_total}} Bath {{baths_half}} &nbsp; {{finished_sqft}} SqFt
    table(class="table table-condensed table-hover" ng-repeat="mail in model.mailings")
      tr
        td Campaign Name
        td(ui-sref="review({id:mail.campaign_id})") {{ mail.campaign_name }}
      tr
        td Sent To
        td {{ mail.recipientType.toInitCaps() }}
      tr
        td Sent On
        td {{ (mail.submitted | date:'MM/dd/yyyy') || 'never' }}
