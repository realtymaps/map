include ../mixins/property/_propertyAttributes.jade

span(ng-controller="rmapsFavoritesCtrl" class="dropdown btn-group favorites" dropdown on-toggle="toggled(open)")
    button(class="dropdown-toggle btn btn-transparent pinned-projects" dropdown-toggle)
      span.icon.icon-pin
    
    .dropdown-menu.whiteblock.no-margin
        .fixed-header
            span
                a(href="#favorites") {{favoritesList.length}} Pinned Properties
        .inner
            ul              
                li(ng-repeat="(id, fav) in favorites")
                    a(href="#favorites") {{favorites.length}}
                        span.enity
                            span.circle-nr
                                span {{$index+1}}
                            span.content
                                span(class="status" ng-class="fav.status") {{fav.status}}
                                +propertyAttributes('fav')
                        span.actions
                            span.unpin
                                span.action Unpin
                                span.icon.icon-pin