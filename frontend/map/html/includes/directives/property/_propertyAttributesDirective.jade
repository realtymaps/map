.property-attributes-wrapper.prop-attrs
  .prop-price(ng-class="formatters.property.getForSaleClass(property, false)") {{formatters.property.getPrice(property.price)}}
  .prop-details.horizontal
    .prop-detail(ng-if="property.bedrooms") {{property.bedrooms}} beds
    .prop-detail(ng-if="property.baths_total") {{property.baths_total}} bath
    .prop-detail(ng-if="property.finished_sqft") {{property.finished_sqft}} Sq Ft
    .prop-detail(ng-if="property.year_built") {{formatters.property.getYear(property.year_built)}} built
  .prop-street {{property.address.street}} {{propert.address.unit}}
  .prop-location {{property.address.citystate}} {{propert.address.zip}}
