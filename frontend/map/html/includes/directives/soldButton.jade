.btn-group.sold-within
  button.btn.btn-sold(type='button' ng-click="filters.sold = !filters.sold" ng-class="{'btn-inactive' : !filters.sold }") Sold in
  ul.sold-options(ng-show="isOpen" role='menu' ng-class="{'top': menuTop==true}")
    li(role='menuitem' ng-repeat="option in options" ng-click="onClick(option)")
      a(ng-if="angular.isNumber(option.name[0])") last {{option.name}}
      a(ng-if="!angular.isNumber(option.name[0])") {{option.name}}
  button.btn.btn-default.toggle(type='button' ng-click="isOpen = !isOpen" ng-disabled="!filters.sold")
    span(ng-show="!filters.closeDateMin && !filters.closeDateMax") {{shortName(selected)}} ▾
    span(ng-show="filters.closeDateMin || filters.closeDateMax") custom ▾
