mixin drawToolMixin(drawToolId, h4, toggleBoolean, toggleFn, ctrl, directiveNgShow, tackFn, tackedBool)
  //.desktop-only TODO (wont show)
  //hint if you want only drawings to show sometimes use ng-if (will kill controller)
  .draw-tools.container(ng-show="#{toggleBoolean}")&attributes(attributes)
    .row(ng-controller="#{ctrl}")
      .col.col-md-3.col-sm-3.col-xs-3
        h4 #{h4}

      .col.col-md-6.col-sm-6.col-xs-3
        .tools()
          if directiveNgShow
            div(ng-if="draw.ready")
              div.rmaps-leaflet-draw(
                id="#{drawToolId}"
                mapPromise="draw.mapPromise"
                options="draw.leafletDrawOptions"
                events="draw.leafletDrawEvents"
                enabled="draw.enabled"
                ng-show="#{directiveNgShow}")
          else
            div(ng-if="draw.ready")
              div.rmaps-leaflet-draw(
                id="#{drawToolId}"
                mapPromise="draw.mapPromise"
                options="draw.leafletDrawOptions"
                events="draw.leafletDrawEvents"
                enabled="draw.enabled")

      .col.col-md-3.col-sm-3.col-xs-3.last-col
        span.pull-right(ng-click="#{toggleFn}" style="font-size: 25px;display: inline-flex;height: 100%;align-items: center;")
          i.icon.icon-close
        if tackFn
          span.checkbox.pull-right(style="display:inline-flex;align-items:center;height:100%;margin:0 30px 0 0")
            label
              <input type="checkbox" ng-click="#{tackFn}" {{#{tackedBool}}}> Keep toolbar open
              <tt>value1 = {{#{tackedBool}}}</tt><br/>  
          // span.pull-right(ng-click="#{tackFn}" ng-class="#{tackedBool} ? 'active': ''")
            i.fa.fa-lg.fa-thumb-tack
