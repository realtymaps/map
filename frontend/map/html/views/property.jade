include ../../../common/html/includes/mixins/_spinnerMixin.jade

.property-detail-modal

  .desktop-only
    .property-detail-container.container
      //+spinnerMixin()
      .row
        .col-sm-2
          ul.nav
            li(ng-repeat="mls in selectedResult.mls")
              a(ng-click="tab.selected = '{{mls.data_source_id}}'" ng-class="{active: tab.selected == mls.data_source_id}") {{mls.mls_formal_name}} Property Detail
            li(ng-repeat="county in selectedResult.county")
              a(ng-click="tab.selected = '{{county.data_source_id}}'" ng-class="{active: tab.selected == county.data_source_id}") Tax Detail
            //- li
            //-   a(ng-click="tab.selected = 'raw'" ng-class="{active: tab.selected == 'raw'}") Raw

        //- .col-sm-8(ng-show="tab.selected == 'raw'")
        //-   .content-heading Full raw data
        //-   json-formatter(json="selectedResult" open="3")

        .col-sm-8(ng-repeat="property in dataSources" ng-show="tab.selected == '{{property.data_source_id}}'")
          .prop-image.prop-image-lg

            property-images(property="property" image-height="350")

            .prop-image-status(class="label-{{getStatus(property).class}}-property") {{getStatus(property).label}}

          .row.content-block.prop-attrs.border-bottom
            .col-sm-6
              .prop-price.prop-lg(ng-if="property.price" ng-class="getStatus(property).class") {{formatters.property.getPrice(property.price)}}
              .below-price
                .sold-date.info.title(ng-if="formatters.property.showSoldDate(property)") sold: {{property.close_date.toUTCString() | date : 'MM/dd/yyyy'}}

              .content-emphasis {{property.address.street}} {{property.address.unit}}
              .content-muted {{property.address.citystate}} {{property.address.zip}}

            .col-sm-6.text-right.desktop-only
              property-buttons(property='property')

          .content-block.prop-attrs.border-bottom(ng-show="getMail()")
            .content-heading Mail Campaigns

            .row.content-row.vertical-align(ng-repeat="mail in getMail().mailings | orderBy: 'lob.date_created'")
              a.col-sm-3.content-body(ui-sref="review({id:mail.campaign_id})") {{mail.campaign_name}}
              .col-sm-3.content-body
                span Sent {{ (mail.lob.date_created | date:'MM/dd/yyyy') || 'unsent' }}
              .col-sm-3.content-body
                span(ng-show="mail.lob.date_created") To {{mail.recipientType}} address
              .col-sm-3.content-body.pull-right.text-right
                button.btn.btn-sm.btn-white(ng-click="previewLetter(mail)") Preview
                  i.fa.fa-envelope

          .row.content-block.prop-attrs.border-bottom

            .col-sm-12
              .content-heading Property Info

              .row.content-row
                .col-xs-4
                  .content-value {{formatters.property.orNa(property.bedrooms)}}
                  .content-label Beds
                .col-xs-4
                  .content-value {{formatters.property.orNa(property.baths.value)}}
                  .content-label {{property.baths.label}}

                .col-xs-4
                  .content-value(ng-if="property.sqft_finished") {{property.sqft_finished | number}}
                  .content-value(ng-if="!property.sqft_finished") N/A
                  .content-label(ng-if="property.data_source_type == 'county'") Assessed Sq Ft &nbsp;
                    icon.fa.fa-question-circle(tooltip-placement="bottom" tooltip="Sq Ft value used for tax purposes and may be different from actual Sq Ft of building")
                  .content-label(ng-if="property.data_source_type != 'county'") Sq Ft

              .row.content-row
                .col-xs-4
                  .content-value(ng-if="property.year_built.value") {{property.year_built.value}}
                  .content-value(ng-if="!property.year_built.value") N/A
                  .content-label(ng-if="property.year_built.label") {{property.year_built.label}}
                  .content-label(ng-if="!property.year_built.label") Year Built
                .col-xs-4
                  .content-value {{formatters.property.orNa(property.acres)}}
                  .content-label Acres
                .col-xs-4
                  .content-value(ng-if="property.acres") {{property.acres*43560| number:0}}
                  .content-value(ng-if="!property.acres") N/A
                  .content-label Lot SqFt

              .row.content-row
                .col-xs-4
                  .content-value {{property.property_type}}
                  .content-label Property Type
                .col-xs-4
                  .content-value(ng-if="property.zoning") {{property.zoning}}
                  .content-value(ng-if="!property.zoning") Unknown
                  .content-label Zoning
                .col-xs-4
                  .content-value(ng-if="property.status_display") {{property.status_display}}
                  .content-label(ng-if="property.status_display") MLS Status

          .row.content-block.prop-attrs.border-bottom(ng-if="property.description")
            .col-sm-12
              .content-heading Description
              p.content-body {{formatters.property.orNa(property.description)}}

          .content-block.border-bottom(ng-if="property.owner_name || property.owner_name_2")
            .content-heading Owner Info
            .row
              .col-sm-6
                .content-label Current Owner
                .content-lg.sensitive
                  span(ng-if="formatters.property.getCurrentOwnersTitle(property)") {{formatters.property.getCurrentOwnersTitle(property)}}:
                  span {{property.owner_name}}
                  span(ng-if="property.owner_name_2")
                    br/
                    | {{property.owner_name_2}}
              .col-sm-6
                .content-label Address
                .content-lg {{property.owner_address.street}} {{property.owner_address.unit}}
                .content-muted {{property.owner_address.citystate}} {{property.owner_address.zip}}

          .row.content-block.border-bottom(ng-if="property.data_source_type == 'mls'")
            .col-sm-6(ng-if="property.days_on_market != null || property.original_price || property.close_date")
              .content-heading MLS Listing Info
              .row.content-row
                .col-sm-6
                  .content-label Listed for
                  .content-value {{formatters.property.humanizeDays(property.days_on_market) }}
                .col-sm-6
                  .content-label Orginal Asked Price
                  .content-value {{formatters.property.getPrice(property.original_price)}}
              .row(ng-if="property.close_date")
                .col-sm-6
                  .content-label Close Price
                  .content-value {{formatters.property.getPrice(property.price)}}
                .col-sm-6
                  .content-label Close Date
                  .content-value
                    span {{property.close_date.toUTCString() | date : 'MM/dd/yyyy'}}

          .row.content-block.border-bottom(ng-if="property.data_source_type=='county'")
            .col-sm-12
              .content-heading PVA Info
              .row.content-row
                .col-sm-12
                  .content-label
                    a(ng-click="showPVA(property.rm_property_id)") View PVA Website (opens new window) &nbsp;
                      icon.fa.fa-external-link

          accordion.row.content-block.subscriber-groups(close-others="false")
            accordion-group(ng-repeat="group in groups" ng-if="property[group.subscriber][group.name].length" heading="{{getLabel(group, property)}}" is-open="property[group.subscriber][group.name].isAccordionOpen" ng-class="{'accordion-open':property[group.subscriber][group.name].isAccordionOpen}")
              .table-striped-pair
                .row.content-row(ng-if="group.name != 'deedHistory' && group.name != 'mortgageHistory' && group.name != 'priorListings'" ng-repeat="field in property[group.subscriber][group.name]")
                  .col-sm-4.field-label {{field.name}}
                  .col-sm-8
                    div(ng-if="!field.value.lines") {{field.value}}
                    div(ng-if="field.value.lines" ng-repeat="line in field.value.lines") {{line}}

                .row.content-row.history(ng-if="group.name == 'deedHistory'")
                  .col-sm-2 Sale Date
                  .col-sm-2 Price
                  .col-sm-3 Buyer
                  .col-sm-3 Seller
                  .col-sm-2 Doc Type
                  .col-sm-1

                .row.content-row.history(ng-if="group.name == 'deedHistory'" ng-show="deed.extra || deed.showExtra" ng-repeat="deed in property[group.subscriber].deedHistoryExtra | orderBy:'-'")
                  .col-sm-2(ng-if="deed.extra") {{deed.close_date | date}}
                  .col-sm-2(ng-if="deed.extra") {{deed.price | currency:"$":0}}
                  .col-sm-3.sensitive(ng-if="deed.extra")
                    span {{deed.owner_name}}
                    span(ng-if="deed.owner_name_2")  &nbsp;&amp; {{deed.owner_name_2}}
                  .col-sm-3.sensitive(ng-if="deed.extra")
                    span {{deed.seller_name}}
                    span(ng-if="deed.seller_name_2") &nbsp;&amp; {{deed.seller_name_2}}
                  .col-sm-2(ng-if="deed.extra") {{deed.document_type}}
                  .col-sm-1(ng-if="deed.extra")
                    a(ng-click="deed.extra.showExtra = !deed.extra.showExtra")
                      span(ng-show="!deed.extra.showExtra") More
                      span(ng-show="deed.extra.showExtra") Less
                  accordion.col-sm-12(ng-if="!deed.extra" close-others="false")
                    accordion-group(ng-repeat="group in groups" ng-if="deed[group.subscriber][group.name].length" heading="{{getLabel(group, deed)}}" is-open="deed[group.subscriber][group.name].isAccordionOpen" ng-class="{'accordion-open':deed[group.subscriber][group.name].isAccordionOpen}")
                      .table-striped-single
                        .row.content-row(ng-if="group.name != 'deedHistory'" ng-repeat="field in deed[group.subscriber][group.name]")
                          .col-sm-4 {{field.name}}
                          .col-sm-8
                            div(ng-if="!field.value.lines") {{field.value}}
                            div(ng-if="field.value.lines" ng-repeat="line in field.value.lines") {{line}}

                .row.content-row.history(ng-if="group.name == 'mortgageHistory'")
                  .col-sm-2 Date
                  .col-sm-2 Amount
                  .col-sm-2 Lender
                  .col-sm-2 Type
                  .col-sm-2 Term
                  .col-sm-2 Purpose
                  .col-sm-1

                .row.content-row.history(ng-if="group.name == 'mortgageHistory'" ng-show="mortgage.extra || mortgage.showExtra" ng-repeat="mortgage in property[group.subscriber].mortgageHistoryExtra")
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.close_date | date}}
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.amount | currency:"$":0}}
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.lender}}
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.financing_type}}
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.term}}
                  .col-sm-2(ng-if="mortgage.extra") {{mortgage.loan_type}}
                  .col-sm-1(ng-if="mortgage.extra")
                    a(ng-click="mortgage.extra.showExtra = !mortgage.extra.showExtra")
                      span(ng-show="!mortgage.extra.showExtra") More
                      span(ng-show="mortgage.extra.showExtra") Less
                  accordion.col-sm-12(ng-if="!mortgage.extra" close-others="false")
                    accordion-group(ng-repeat="group in groups" ng-if="mortgage[group.subscriber][group.name].length" heading="{{getLabel(group, mortgage)}}" is-open="mortgage[group.subscriber][group.name].isAccordionOpen" ng-class="{'accordion-open':mortgage[group.subscriber][group.name].isAccordionOpen}")
                      .table-striped-single
                        .row.content-row(ng-if="group.name != 'mortgageHistory'" ng-repeat="field in mortgage[group.subscriber][group.name]")
                          .col-sm-4 {{field.name}}
                          .col-sm-8
                            div(ng-if="!field.value.lines") {{field.value}}
                            div(ng-if="field.value.lines" ng-repeat="line in field.value.lines") {{line}}

                .row.content-row.history(ng-if="group.name == 'priorListings'")
                  .col-sm-2(ng-if="!listing.discontinued_date") Close Date
                  .col-sm-2(ng-if="listing.discontinued_date") Discontinued Date
                  .col-sm-2 Status
                  .col-sm-2 DOM
                  .col-sm-2 Price
                  .col-sm-1

                .row.content-row.history(ng-if="group.name == 'priorListings'" ng-show="listing.extra || listing.showExtra" ng-repeat="listing in property[group.subscriber].priorListingsExtra")
                  .col-sm-2(ng-if="listing.extra && !listing.discontinued_date") {{listing.close_date | date}}
                  .col-sm-2(ng-if="listing.extra && listing.discontinued_date") {{listing.discontinued_date | date}}
                  .col-sm-2(ng-if="listing.extra") {{listing.status}}
                  .col-sm-2(ng-if="listing.extra") {{listing.days_on_market}}
                  .col-sm-2(ng-if="listing.extra") {{listing.price | currency:"$":0}}
                  .col-sm-1(ng-if="listing.extra")
                    a(ng-click="listing.extra.showExtra = !listing.extra.showExtra" ng-show="listing.subscriber_groups")
                      span(ng-show="!listing.extra.showExtra") More
                      span(ng-show="listing.extra.showExtra") Less
                  accordion.col-sm-12(ng-if="!listing.extra" close-others="false")
                    accordion-group(ng-repeat="group in groups" ng-if="listing[group.subscriber][group.name].length" heading="{{getLabel(group, listing)}}" is-open="listing[group.subscriber][group.name].isAccordionOpen" ng-class="{'accordion-open':listing[group.subscriber][group.name].isAccordionOpen}")
                      .table-striped-single
                        .row.content-row(ng-if="group.name != 'priorListings'" ng-repeat="field in listing[group.subscriber][group.name]")
                          .col-sm-4 {{field.name}}
                          .col-sm-8
                            div(ng-if="!field.value.lines") {{field.value}}
                            div(ng-if="field.value.lines" ng-repeat="line in field.value.lines") {{line}}

          .row.content-block.mls-disclaimer.border-top
            .col-sm-6(ng-show="property.disclaimer_logo || property.disclaimer_text")
              .content-heading Broker Reciprocity
              .content-row
                .mls-info Based on information from {{property.mls_formal_name}} as of {{property.up_to_date.toUTCString() | date : 'MM/dd/yyyy'}}
                .row
                  .col-lg-3
                    .mls-icon
                      img(ng-show="property.disclaimer_logo" rmaps-cdn-image ng-src="/assets/mlsicons/{{property.disclaimer_logo}}")
                  .col-lg-9
                    .mls-disclaimer {{property.disclaimer_text}}
            .col-sm-6(ng-show="property.dmca_contact_name && property.dmca_contact_address")
              .content-row
                .btn.btn-white(ng-click="showDMCA(property)") DMCA for {{property.mls_formal_name}}


  .mobile-only
    mobile-header-buttons(header-id="page-modal-header")
      .property-modal-buttons
        property-buttons(property = 'property')

    .property-detail-container(ng-repeat="property in dataSources")
      //+spinnerMixin()
      .prop-image.prop-image-md
        //background-color:transparent; must be here to override googles meddling where it forces style via element
        ui-gmap-street-view-panorama.prop-image-panorama(ng-cloak,style="background-color:transparent;",focalcoord="property.geometry_center",radius="50",imagestatus="streetViewPanorama.status",control="controls.streetView")
        include ../includes/map/_satilite.jade
        .prop-image-status(class="label-{{getStatus(property).class}}-property") {{getStatus(property).label}}
          span(ng-if="property.data_source_type == 'county'") - Tax Record
          span(ng-if="property.data_source_type == 'mls'") - {{property.mls_formal_name}}

      .container
        .content-block.prop-attrs.border-bottom
          .pull-right.text-right
            .prop-price(ng-if="property.price" ng-class="getStatus(property).class") {{formatters.property.getPrice(property.price)}}
            .below-price.content-label
              .sold-date.info.title(ng-if="formatters.property.showSoldDate(property)") sold: {{property.close_date.toUTCString() | date : 'MM/dd/yyyy'}}

          .content-emphasis.content-lg {{property.address.street}} {{property.address.unit}}
          .content-muted {{property.address.citystate}} {{property.address.zip}}

        .content-block.prop-attrs.border-bottom(ng-show="getMail()")
            .content-heading Mail Campaigns

            .row.content-row.vertical-align(ng-repeat="mail in getMail().mailings | orderBy: 'lob.date_created'")
              a.col-xs-3.content-body(ui-sref="review({id:mail.campaign_id})") {{mail.campaign_name}}
              .col-xs-3.content-body
                span Sent {{ (mail.lob.date_created | date:'MM/dd/yyyy') || 'unsent' }}
              .col-xs-3.content-body
                span(ng-show="mail.lob.date_created") To {{mail.recipientType}} address
              .col-xs-3.content-body
                button.btn.btn-sm.btn-white(mobile-modal modal-template="'MailReview'" modal-title="'Mail Review'" ng-show="mail.lob.thumbnails.length") Preview
                  i.fa.fa-envelope
                script(type="text/ng-template" id="MailReview")
                  .preview-mail-window
                    .modal-body
                      img(rmaps-cdn-image ng-src="{{mail.lob.thumbnails[0].medium}}")

        .content-block.prop-attrs.border-bottom
          .content-heading Property Info

          .row.content-row
            .col-xs-4
              .content-value {{formatters.property.orNa(property.bedrooms)}}
              .content-label Beds
            .col-xs-4
              .content-value {{formatters.property.orNa(property.baths_total)}}
              .content-label Baths
            .col-xs-4
              .content-value(ng-if="property.sqft_finished") {{property.sqft_finished | number}}
              .content-value(ng-if="!property.sqft_finished") N/A
              .content-label(ng-if="property.data_source_type == 'county'") Assessed Sq Ft &nbsp;
                icon.fa.fa-question-circle(tooltip-placement="bottom" tooltip="Sq Ft value used for tax purposes and may be different from actual Sq Ft of building")
              .content-label(ng-if="property.data_source_type != 'county'") Sq Ft

          .row.content-row
            .col-xs-4
              .content-value(ng-if="property.year_built.value") {{property.year_built.value}}
              .content-value(ng-if="!property.year_built.value") N/A
              .content-label(ng-if="property.year_built.label") {{property.year_built.label}}
              .content-label(ng-if="!property.year_built.label") Year Built
            .col-xs-4
              .content-value {{formatters.property.orNa(property.acres)}}
              .content-label Acres
            .col-xs-4
              .content-value(ng-if="property.acres") {{property.acres*43560| number:0}}
              .content-value(ng-if="!property.acres") N/A
              .content-label Lot SqFt

          .row.content-row
            .col-xs-4
              .content-value {{property.property_type}}
              .content-label Property Type
            .col-xs-4
              .content-value(ng-if="property.zoning") {{property.zoning}}
              .content-value(ng-if="!property.zoning") Unknown
              .content-label Zoning
            .col-xs-4
              .content-value(ng-if="property.status_display") {{property.status_display}}
              .content-label(ng-if="property.status_display") MLS Status

        .content-block.prop-attrs.border-bottom(ng-if="property.description")
          .content-heading Description
          p.content-body {{property.description}}

        .content-block.border-bottom(ng-if="property.owner_name || property.owner_name_2")
          .content-heading Owner Info
          p
            .content-label Current Owner
            .content-lg
              span(ng-if="formatters.property.getCurrentOwnersTitle(property)") {{formatters.property.getCurrentOwnersTitle(property)}}:
              span {{property.owner_name}}
              span(ng-if="property.owner_name_2")
                br/
                | {{property.owner_name_2}}
          p
            .content-label Address
            .content-lg {{property.address.street}} {{property.address.unit}}
              br/
              | {{property.address.citystate}} {{property.address.zip}}

        .content-block.border-bottom(ng-if="property.data_source_type == 'mls' || property.days_on_market != null || property.original_price || property.close_date")
          .content-heading MLS Listing Info
          .row.content-row
            .col-xs-6
              .content-label Listed for
              .content-value {{formatters.property.humanizeDays(property.days_on_market) }}
            .col-xs-6
              .content-label Orginal Asked Price
              .content-value {{formatters.property.getPrice(property.original_price)}}
          .row.content-row(ng-if="property.close_date")
            .col-xs-6
              .content-label Close Price
              .content-value {{formatters.property.getPrice(property.price)}}
            .col-xs-6
              .content-label Close Date
              .content-value
                span {{property.close_date.toUTCString() | date : 'MM/dd/yyyy'}}

        .content-block.mls-disclaimer(ng-show="property.disclaimer_logo || property.disclaimer_text")
          .content-heading Broker Reciprocity
          .content-row
            .mls-info Based on information from {{property.mls_formal_name}} as of {{property.up_to_date.toUTCString() | date : 'MM/dd/yyyy'}}
            .row
              .col-lg-3
                .mls-icon
                  img(ng-show="property.disclaimer_logo" rmaps-cdn-image ng-src="/assets/mlsicons/{{property.disclaimer_logo}}")
              .col-lg-9
                .mls-disclaimer {{property.disclaimer_text}}
          .content-row(ng-show="property.disclaimer_logo || property.disclaimer_text")
            .btn.btn-white(ng-click="showDMCA(property)") DMCA for {{property.mls_formal_name}}

