#edit-template
  form
    div.row.equal-height
      div.col-md-6
        .row(style="text-align: center")
          .toolGroup

            //- input.form-control.name-input.miscTool(ng-model="templateObj.mailCampaign.name")

            //- text-angular-toolbar(name="miscToolbar" ta-toolbar-button-class="btn btn-text miscTool" ta-toolbar="[['redo','undo']]")

            //- button.btn.btn-text.miscTool(ng-click="doPreview()") Preview
            //- button.btn.btn-text.miscTool(ng-click="saveContent()") Save
            //- button.btn.btn-text.miscTool(ng-click="sendLetter()") Send!            
            button.btn.btn-success.miscTool(ng-click="quoteAndSend()") Price Quote!
            button.btn.btn-success.miscTool(ng-click="saveContent()") Save
            button.btn.btn-success.miscTool(ng-click="doPreview()") Preview
            text-angular-toolbar(name="miscToolbar" ta-toolbar-group-class="miscTools" ta-toolbar-button-class="btn btn-default miscTool" ta-toolbar="[['redo','undo']]")

        .row
          input.form-control.name-input(ng-model="templateObj.mailCampaign.name")
        .row
          .template-stage-container
            .template-stage
              //- .clear-template
              //-   .template-view
              div.letter-editor(ng-class="applyTemplateClass()")
                div(text-angular name="wysiwyg" ta-text-editor-class="ta-letter-wrapper" on-drop="macro" focus="focusMe" ondragend="dropMacro(e)" ta-html-editor-setup="htmlEditorSetup()" ta-text-editor-setup="textEditorSetup()" ng-model="data.htmlcontent" ta-target-toolbars="featureToolbar,miscToolbar,colorToolbar,fontTypeToolbar,fontSizeToolbar")



      
      div.col-md-6
        tabset(justified="true")
          tab(heading="Text" active="true")
            div.edit-template-design
              div.form-section
                h4
                  | Font Family
                text-angular-toolbar(name="fontTypeToolbar" ta-toolbar-group-class="fontTypeTools" ta-toolbar="[['fontHelvetica','fontTimesNewRoman','fontGillSans','fontGeorgia']]")

              div.form-section
                h4
                  | Font Size
                text-angular-toolbar(name="fontSizeToolbar" ta-toolbar-group-class="btn-group" ta-toolbar="[['fontSize12','fontSize14','fontSize16','fontSize18','fontSize20']]")

              div.form-section
                h4
                  | Font Color
                text-angular-toolbar(name="colorToolbar" ta-toolbar-group-class="colorTools" ta-toolbar="[['textBlack','textBlue','textGreen','textRed','textYellow','textWhite']]")

              div.form-section
                h4
                  | Text Features
                text-angular-toolbar(name="featureToolbar" ta-toolbar-group-class="btn-group" ta-toolbar="[['bold','italics','underline'],['ul','ol','test']]")

          tab(heading="Macros")
            div.edit-template-design
              div.form-section
                h4
                  | Drag &amp; Drop Macro
                div(ng-repeat="macro in macros" rmaps-draggable="macro")
                  label.btn.btn-primary(ng-mousedown="setMacro(macro)") {{macro}}

          tab(heading="Images")
            div.edit-template-design
              div.form-section
                h4
                  | Insert Image
                div
                  label Insert Image

