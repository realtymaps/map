.mail-wizard-steps
  header.send-progress(ng-hide="hideProgress()")
    button.btn.btn-default.pull-left(ng-click="prevStep()" ng-hide="hideBackButton()") Back
    button.btn.btn-primary.pull-right(ng-click="nextStep()" ng-hide="hideNextButton()") Next
    div.pathway
      ul
        li
          span Recipients
        li
          span Campaign Info
        li
          span Select Template
        li
          span Edit Template
        li.active
          span Review

.review
  .inner
    .container
      .row
        .col-md-12
          h1.pageTitle
            span(style="text-transform: capitalize;") {{wizard.mail.getCategory()}}
            |  Review
      .row.review-items
        .pdf-review(ng-show="review.pdf != null")
          embed(embed-src="{{review.pdf}}" src="")
        div(ng-class="{'content-with-pdf-review': review.pdf != null}")
          .col-md-12
            .row.separator
              .col-md-10
                .row
                  h2 Campaign Name
                .row
                  .col-md-2
                    p Name:
                  .col-md-10
                    p {{wizard.mail.campaign.name}}
                .row
                  .col-md-2
                    p Status:
                  .col-md-10
                    span(class="{{statusNames[wizard.mail.campaign.status]}}") {{statusNames[wizard.mail.campaign.status].toInitCaps()}}

              .col-md-2
                 button.btn.btn-primary.review-edit-button(ng-hide="wizard.mail.isSent()" ui-sref="campaignInfo({id:wizard.mail.campaign.id})") edit

            .row.separator.recipients
              .col-md-10
                .row
                  h2 Recipients
                .row
                  p(ng-click="showAddresses(wizard.mail.campaign.recipients)" ng-pluralize count="wizard.mail.campaign.recipients.length"
                    when="{'0': 'There are no recipients selected for this mailing', '1': 'Mailing has 1 recipient.', 'other': 'Mailing has {} recipients.'}")

              .col-md-2
                 button.btn.btn-primary.review-edit-button(ng-hide="wizard.mail.isSent()" ui-sref="recipientInfo({id:wizard.mail.campaign.id})") edit

            .row.separator(ng-show="wizard.mail.isSent()")
              .col-md-12
                .row
                  h2 Paid Amount
                .row
                  p Mailing submitted for {{(wizard.mail.campaign.stripe_charge.amount/100) | currency}}

            .row.separator(ng-hide="wizard.mail.isSent()")
              .col-md-12
                .row
                  h2 Price Quote
                .row
                  .btn.btn-danger(ng-show="priceQuote == null") Refreshing price data...
                  .btn.btn-danger(ng-show="wizard.mail.campaign.recipients.length == 0") N/A
                  .btn.btn-success(
                    ng-hide="priceQuote == null || wizard.mail.campaign.recipients.length == 0"
                    tooltip-trigger="mousehover"
                    uib-tooltip="Click to submit this mailing!"
                    tooltip-enable="true"
                    ng-click="sendMail()") Submit campaign for {{priceQuote | currency}}
