.review
  .inner
    .container
      .row
        .col-md-12
          h1.pageTitle
            span(style="text-transform: capitalize;") {{category}}
            |  Review
      .row.review-items
        .col-md-12
          .row.separator
            .col-md-10
              .row
                h2 Campaign Name
              .row
                .col-md-2
                  p Name:
                .col-md-10
                  p {{templObj.mailCampaign.name}}
              .row
                .col-md-2
                  p Status:
                .col-md-10
                  span(class="{{templObj.mailCampaign.status}}") {{templObj.mailCampaign.status}}

            .col-md-2
               button.btn.btn-primary.review-edit-button(ng-hide="sentFlag" ui-sref="senderInfo({id:templObj.mailCampaign.id})") edit

          .row.separator
            .col-md-10
              .row 
                h2 Recipients
              .row
                p(ng-show="sentFlag" ng-pluralize count="templObj.mailCampaign.recipients.length"
                  when="{'0': 'No recipients were selected for this mailing.', '1': 'Mailing was sent to 1 recipient.', 'other': 'Mailing was sent to {{templObj.mailCampaign.recipients.length}} recipients.'}")

                p(ng-hide="sentFlag" ng-pluralize count="templObj.mailCampaign.recipients.length"
                  when="{'0': 'There are no recipients selected for this mailing', '1': 'Mailing will be sent to 1 recipient.', 'other': 'Mailing will be sent to {{templObj.mailCampaign.recipients.length}} recipients.'}")

            .col-md-2
               button.btn.btn-primary.review-edit-button(ng-hide="sentFlag" ui-sref="recipientInfo({id:templObj.mailCampaign.id})") edit

          .row.separator(ng-show="sentFlag")
            .col-md-12
              .row
                h2 Paid Amount
              .row(ng-show="sentFlag")
                p {{priceQuote}}

          .row.separator(ng-hide="sentFlag")
            .col-md-12
              .row
                h2 Price Quote
              .row
                .btn.btn-danger(ng-show="priceQuote == null") Refreshing price data...
                //- p.getting-quote(ng-show="priceQuote == null") Calculating price quote...
                .btn.btn-success(
                  ng-hide="priceQuote == null" 
                  tooltip-trigger="mousehover" 
                  uib-tooltip="Click to submit this mailing!" 
                  tooltip-enable="true" 
                  ng-click="sendMail()") Submit campaign for {{priceQuote | currency}}
