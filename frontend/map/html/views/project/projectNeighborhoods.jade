.collapse-header
  h2.title Neighbourhoods ({{project.neighbourhoods.length}})
.row.repeat
  li.col-md-6(ng-repeat="neighbourhood in project.neighbourhoods")
    .property-card
      a.map(href="#/neighbourhoods/{{neighbourhood.id}}")
        span View Neighbourhood
        img(src="/assets/test_map.jpg")
      .data
        h3 {{neighbourhood.name}}
      button.btn.btn-link
        i.fa.fa-trash-o
        span Delete
