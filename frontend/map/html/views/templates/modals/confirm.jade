.modal-header(ng-show="modalTitle")
  h3.modal-title {{modalTitle}}
.modal-body(ng-show="modalBody")
  b {{modalBody}}
.modal-footer
  button.btn.btn-primary(type='button', ng-click='modalOk(); $event.stopPropagation()') OK
  button.btn.btn-warning(type='button', ng-show="showCancelButton" ng-click='modalCancel(); $event.stopPropagation()') Cancel
