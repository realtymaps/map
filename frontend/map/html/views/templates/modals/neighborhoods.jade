form.note(name="createEditNeighborhoodForm")
  .modal-header
    h3.modal-title(ng-if="!model.neighborhood_name") Make Shape a Neighborhood
    h3.modal-title(ng-if="model.neighborhood_name") Edit Neighborhood
  .modal-body
    .form-group
      label(for="neighborhood_name") Name
      input.form-control(
        placeholder="Type Neighborhood name here."
        type="text" 
        name="title"
        ng-model="model.neighborhood_name"
        validator="required,minlength=2")
      label(for="neighborhood_details") Details
      textarea.form-control(cols="25" rows="10"
        placeholder="Fill in your neighborhood details/description here. (Optional)"
        name="text"
        ng-model="model.neighborhood_details"
        validator="maxlength=150")

  .modal-footer
    button.btn.btn-default(type="reset" ng-click="cancel()" validation-reset="createEditNoteForm") Cancel
    button.btn.btn-primary(type="submit" ng-click="save()" validation-submit="createEditNoteForm") Save
