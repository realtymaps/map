.modal-header
  h3.modal-title {{areaToShow.area_name}} Statistics
.modal-body
  .statistics(ng-repeat="status in ['sold', 'for sale', 'pending']" ng-if="areaStatistics[areaToShow.id][status]")
    h4(style="text-transform:capitalize;" ng-click="areaStatistics[areaToShow.id][status].hide = !areaStatistics[areaToShow.id][status].hide") {{status}}
    div(ng-show="!areaStatistics[areaToShow.id][status].hide")
      .row
        .col-md-5 Number of Properties
        .col-md-4 {{areaStatistics[areaToShow.id][status].count}}

      .row
        .col-md-5 Average Price
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].price_avg") {{areaStatistics[areaToShow.id][status].price_avg | currency:"$":0}}
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].price_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].price_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].price_n}} properties)

      .row
        .col-md-5 Average Sq Ft
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].sqft_avg") {{areaStatistics[areaToShow.id][status].sqft_avg | number:0}}
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].sqft_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].sqft_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].sqft_n}} properties)

      .row
        .col-md-5 Average Price / Sq Ft
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].price_sqft_avg") {{areaStatistics[areaToShow.id][status].price_sqft_avg | currency:"$":0}}
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].price_sqft_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].price_sqft_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].price_sqft_n}} properties)

      .row
        .col-md-5 Average Days On Market
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].days_on_market_avg") {{areaStatistics[areaToShow.id][status].days_on_market_avg | number:0}}
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].days_on_market_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].days_on_market_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].days_on_market_n}} properties)

      .row
        .col-md-5 Average C. Days On Market
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].cdays_on_market_avg") {{areaStatistics[areaToShow.id][status].cdays_on_market_avg | number:0}}
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].cdays_on_market_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].cdays_on_market_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].cdays_on_market_n}} properties)

      .row
        .col-md-5 Average Lot Size
        .col-md-4(ng-if="areaStatistics[areaToShow.id][status].acres_avg") {{areaStatistics[areaToShow.id][status].acres_avg | number:2}} acres / {{areaStatistics[areaToShow.id][status].acres_avg * 43560| number:0}} sqft
        .col-md-4(ng-if="!areaStatistics[areaToShow.id][status].acres_avg") -
        .col-md-3(ng-if="areaStatistics[areaToShow.id][status].acres_n != areaStatistics[areaToShow.id][status].count") ({{areaStatistics[areaToShow.id][status].acres_n}} properties)

.modal-footer(ng-if="showStatsSave")
  button.btn.btn-default(ng-click="$dismiss()") Discard
  button.btn.btn-primary(ng-click="$close()") Save
