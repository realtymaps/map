section.map(ng-cloak ng-init="init('page-map')")
  include ../includes/mixins/_leafletMixin.jade
  //- 
  include ../includes/map/_drawTools.jade

  div(ng-if="map.isReady" id="map")
    div(ng-if="Toggles.showOldToolbar" ng-controller="rmapsMapDrawCtrl")
      +leafletMixin('map', 'mainMap')(lf-draw='map.leafletDrawOptions')
    div(ng-if="!Toggles.showOldToolbar")
      +leafletMixin('map', 'mainMap')

  //PROPERTIES IS BAD on Digests
  include ../includes/map/_properties.jade 
  include ../includes/map/_searchbox.jade
  include ../includes/map/_notesTap.jade
