extends ./_layout
block content
  .full-width.container
    main.site-main.map-container(ui-view="main-map" class="{{pageClass}}")

    main.site-main.page-container(ui-view="main-page" class="{{pageClass}}" ng-show="rmapsPageService.isPage()")
      include ../views/home.jade

  .modal-container(ng-show="rmapsPageService.isModal()")
    .page-modal-close.desktop-only
      a(ng-click="rmapsPageService.back()")
        i.icon.icon-close
    .page-modal(ui-view="main-modal" class="{{pageClass}}")
