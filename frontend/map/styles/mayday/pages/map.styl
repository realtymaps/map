#map

  .inner
    position fixed
    top 0
    width 100%
    height 100%

  #map-container
    position absolute
    left 0
    right 0
    top 0
    bottom 0
    width 100%
    height 100%
    z-index 0
    #map-canvas
      width 100%
      height 100%


  #map-navigation
    padding 50px 30px
    display none
    // position relative
    width 100%
    z-index 1
    @media (min-width: xs)
      display block

    .projects-tools
      left 20px
      position absolute

    .properties-tools
      right 20px
      position absolute
      &.btn-group
        margin-right 0

    .projects-list
      >button
        height 50px
        position relative
        min-width 160px
        @media (min-width: md)
          min-width 220px
        &:before
          content ""
          height 20px
          left 0
          margin-top -10px
          position absolute
          top 50%
          width 3px
          background c_light_blue
        > span
          .icon-project
            text-align left
            font-size 20px
            line-height 28px
            float left
          h4
            margin 0 30px 0 40px
            font-size 12px
            font-weight bold
            line-height 30px
            text-align left
            display block
            color c_black

    .projects-tools
      >.btn-group
        &.opened
          button.btn
            border-bottom-left-radius  0
            -moz-border-bottom-left-radius 0
            -webkit-border-bottom-left-radius 0
            -o-border-bottom-left-radius 0
            border-bottom-right-radius 0
            -moz-border-bottom-right-radius 0
            -webkit-border-bottom-right-radius 0
            -o-border-bottom-right-radius 0
    .properties-tools
      &.opened
        button.btn
          border-bottom-left-radius  0
          -moz-border-bottom-left-radius 0
          -webkit-border-bottom-left-radius 0
          -o-border-bottom-left-radius 0
          border-bottom-right-radius 0
          -moz-border-bottom-right-radius 0
          -webkit-border-bottom-right-radius 0
          -o-border-bottom-right-radius 0
    ul.dropdown-menu
      width 100%
      li.count
        color c_dark_blue
        font-size 12px
        font-weight bold
        padding 15px
        background c_black_10
      li
        a
          span.enity
            position relative
            float left
            width 80%
            span.title
              font-weight bold
              display block
              @extends .global-transition
            span.count
              font-size 10px
              color c_gray
              float left
            span.icon
              float left
          span.actions
            width 20%
            float right
            opacity 0
            transform scale(.2)
            @extends .global-transition
            .icon
              display inline-block
              font-size 20px
              padding 7px
              &.icon-remove
                display none

              &:hover
              &:focus
                color c_light_blue

        &:hover
        &:focus
          span.title
            color c_light_blue
          span.actions
            opacity 1
            transform scale(1)

    .properties-list
      .inner
        background-color c_white
        background-image none
      >button
        height 50px
        position relative
        min-width 160px
        @media (min-width: md)
          min-width 280px
        &:before
          content ""
          height 20px
          left 0
          margin-top -10px
          position absolute
          top 50%
          width 3px
          background c_light_blue
        > span
          .icon-property
            text-align left
            font-size 20px
            line-height 28px
            float left
          h4
            margin 0 30px 0 40px
            font-size 12px
            font-weight bold
            line-height 30px
            text-align left
            display block
            color c_black
    .pinned-projects-list
      .enity
        display table
        .circle-nr
          display table-cell
          padding 5px
          span
            background-color c_black
            border-radius 500px
            color c_white
            display block
            font-size 10px
            font-weight bold
            height 20px
            line-height 20px
            text-align center
            width 20px
        .content
          display table-cell
          padding 5px
          .status
            background c_green
            color c_white
            text-transform uppercase
            display inline-block
            padding 5px 10px
            font-size 11px
            margin-bottom 5px
            &.pending
              background c_yellow

            &.sold
              background c_red

          .price
            margin 0
            font-size 18px
            font-weight bold
            color c_green
            &.pending
              color c_yellow
            &.sold
              color c_red

          .property-attr
            list-style none
            display inline-block
            ul.attr
              padding 0
              margin 0 -4px
              li
                list-style none
                display inline-block
                border-right 1px solid c_black
                border-bottom none
                padding 0 4px
                font-size 12px
                &:last-child
                  border none
          .title
            margin 0
            font-size 16px
            a
              padding 0
              text-decoration none
              &:hover
              &:focus
                color c_light_blue
          .location
            color c_gray
            font-size 12px
            font-weight bold
      .actions
        transform scale(1) !important
        opacity 1 !important
        text-align right
        vertical-align middle
        span.unpin
          span.action
            font-size 10px
            line-height 30px
            vertical-align top
            opacity 0
            @extends .global-transition
          span.icon
            font-size 16px!important
          &:hover
          &:focus
            span.action
              opacity 1
    .notes-list
      ul
        li
          > div
            overflow hidden
            padding 10px
            position relative
            @extend .global-transition
            &:hover
            &.active
            &.focus
              background-color c_light_blue_select

      .enity
        display table
        position relative
        float left
        margin-right 32px
        .circle-nr
          display table-cell
          padding 5px
          span
            background-color c_black
            border-radius 500px
            color c_white
            display block
            font-size 10px
            font-weight bold
            height 20px
            line-height 20px
            text-align center
            width 20px
        .content
          display table-cell
          padding 5px
          h3
            font-size 16px
            margin 0 0 10px 0

          p.text
            font-size 12px
            color c_text_gray
            margin 0 0 10px 0

          .comment
            display block
            clear both
            a
              text-decoration underline
              background transparent
              font-size 12px
              padding 0
              &:hover
              &:focus
              &:active
                color c_light_blue
          .sketch
            background-color c_pastel_blue
            border 1px solid c_light_blue
            padding 5px
            border-radius 5px
            float left
            margin 0 0 10px 0
            cursor pointer
            width: 100%;
            .action
              font-size 10px
              float left
              line-height 20px
            .icon
              color c_light_blue
              font-size 20px
              float left
              margin 0 10px 0 0
      span.actions
        width 32px
        position absolute
        top 10px
        right 10px
        opacity 0
        transform scale(.2)
        text-align center
        @extends .global-transition
        .icon
          display inline-block
          font-size 20px
          padding 7px
          cursor pointer

    .neighbourhood-list
      ul
        li
          > div
            overflow hidden
            padding 10px
            position relative
      .enity
        display table
        float left
        margin-right 32px
        position relative
        .count
          float left
          margin 0 10px 0 0
          color c_black !important
          font-weight bold
          font-size 12px
          line-height 20px

        .map
          width 38px
          height 38px
          border 1px solid c_gray
          border-radius 2px
          float left
          margin 0 10px 0 0
          overflow hidden

          img
            max-width 100%
            display inline

        .content
          float left
          a
            display block
            padding 0
            &:hover
            &:focus
            &:active
              text-decoration none
              color c_light_blue
            h3.title
              font-size 16px
              margin 0
          p.properties
            font-size 12px
            color c_text_gray_lighter
            margin 0
            line-height 20px
      span.actions
        width 32px
        position absolute
        top 10px
        right 10px
        opacity 0
        transform scale(.2)
        text-align center
        @extends .global-transition
        .icon
          display inline-block
          font-size 20px
          padding 7px
          cursor pointer

    .pinned-projects-list
    .notes-list
    .neighbourhood-list
      button
        span
          font-size 18px
          line-height 40px
          vertical-align top
          position relative
          top -3px

    .filters
      display block
      background c_dark_white
      border-bottom 1px solid c_darker_white
      border-top 1px solid c_darker_white
      padding 10px
      span
        display inline-block
        line-height 24px
        font-weight bold
        margin-right 10px
      ul
        list-style none
        display inline-block
        line-height 24px
        margin 0
        padding 0
        li
          list-style none
          display inline-block
          border none
          padding-right 20px
          cursor pointer
          position relative
          &:hover
          &:focus
            color c_light_blue

            span.caret
              display block

          span.caret
            border-left 5px solid transparent;
            border-right 5px solid transparent;
            border-top 5px dashed;
            right -4px
            top 16px
            display none

            &.asc
              transform rotate(0deg)
            &.desc
              transform rotate(180deg)

    .inner
      max-height 600px
      overflow auto
      padding-top 10px
      ul.list
        padding 0 10px
        list-style none
        > li
          list-style none
          box-shadow 0px 1px 3px c_black_30
          margin-bottom 10px
          .property-img
            width 100%
            margin-bottom 10px
            position relative

            .status
              background c_green
              color c_white
              text-transform uppercase
              bottom 0
              left 0
              display inline-block
              padding 5px 10px
              font-size 11px
              position absolute

              &.pending
                background c_yellow

              &.sold
                background c_red

            img
              max-width 100%
              display inline-block


          .price
            margin 0
            font-size 18px
            font-weight bold
            padding 0 10px
            color c_green
            &.pending
              color c_yellow
            &.sold
              color c_red

          .property-attr
            padding 0 10px
            list-style none
            display inline-block
            ul.attr
              padding 0
              margin 5px -4px
              li
                list-style none
                display inline-block
                border-right 1px solid c_black
                border-bottom none
                padding 0 4px
                font-size 12px
                &:last-child
                  border none
          .title
            padding 0 10px
            margin 0 0 5px 0
            a
              padding 0
              text-decoration none
              &:hover
              &:focus
                color c_light_blue
          .location
            padding 0 10px
            color c_gray
            font-size 12px
            font-weight bold
          .btn-actions
            overflow hidden
            border-top 1px solid c_darker_white
            button
              font-size 11px
              border none
              border-right 1px solid c_darker_white
              background c_white
              padding 0
              width 33.3333%
              float left
              min-width 10px
              &:last-child
                border none

    .settings-list
      min-width 320px
      .blueArrow
        &:before
          left 15px
          right auto
      ul
        padding 0 20px
        list-style none
        li
          border none
          margin-bottom 10px
          span.label
            color c_black
            font-size 14px
          &.setPrice
            input
              max-width 95px
      .setBeds
      .setBath
        .btn-group
          display: block;
          margin-right: -4px;
          .btn
            min-width 20%
      .btn-actions
        overflow hidden
        text-align center
        .btn
          position relative
          width 100px
          display inline-block
          .caret
            border-left 4px solid transparent
            border-right 4px solid transparent
            border-top 4px dashed
            margin 0
    ul.dropdown-menu
      width 100%
      li.count
        background c_dark_white
        border-bottom 1px solid c_darker_white
        border-top 1px solid c_darker_white
      li
        a
          overflow hidden
          padding 10px
          span.enity
            span.icon
              float left
              font-size 18px
              margin-right 10px
              padding 8px
            span.title
              float left
              @extends .global-transition
              h3
                font-weight normal
                margin 0
                font-size 16px
              span.count
                font-size 10px
                color c_gray
                float left
    button
      height 50px
      margin-right 10px

      @media (min-width: s)
        margin-right 20px

      &.add-button
      &.pinned-projects
      &.notes
      &.neighbour
      &.settings
      &.search
      &.add-project
      &.add-note
      &.add-neighbour
        width 50px
        background-position left top
        background-repeat no-repeat
        color c_black
        font-size 28px

    .btn-group
      margin-right 10px
      @media (min-width: s)
        margin-right 20px

      .btn-group
        margin 0
        position static
      button
        margin 0
  #map-layers
    position absolute
    z-index 2
    height 100%
    width 100%
    top 0
    pointer-events none
    ul
      li.note-enity
        pointer-events auto
  #map-tools
    bottom 20px
    left 20px
    position absolute
    z-index 1
    .layers-tools
      button
        width 60px
        height 60px
        margin 20px 20px 0 0
        .icon-layers
          font-size 30px

      .filter-row
        overflow hidden
        display table
        margin-bottom 6px
        span.label
          display table-cell
          color c_black
          font-size 12px
          width 100px
        &:last-child
          margin-bottom 0

        ul
          //display table-cell
          list-style none
          padding 0
          margin 0 -3px
          li
            display table-cell
            button
              height auto
              width 90px
              font-size 12px
              margin 0 3px

    .zoom-tools
      margin 20px 20px 0 0
      button
        float left
        clear both
        width 40px
        height 40px
        font-size 18px
        &.zoom-in
          border-radius 3px 3px 0 0
          border-bottom 1px solid c_black_10
        &.zoom-out
          border-radius 0 0 3px 3px

    .location-tools
      margin 20px 20px 0 0
      button
        width 40px
        height 40px
        font-size 18px


@-moz-document url-prefix()
  .pinned-projects-list
  .notes-list
  .neighbourhood-list
    button
      span
        top 0px !important
