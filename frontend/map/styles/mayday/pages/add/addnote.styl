.notes-layer
  @media desktop
    display none

  .tutorial
    position absolute
    left 50%
    top 100px
    background c_light_blue
    padding 10px 20px
    border-radius 5px
    opacity .5
    transform translateX(-50%)

    p
      margin 0px
      color c_white
      @extends .grow

  ul
    list-style none
    li.note-enity
      position absolute
      top 50%

      .circle-nr
        cursor pointer
        @extends .grow
        span
          background-color c_black_80
          width 30px
          height 30px
          font-size 14px
          line-height 30px
      .leave-a-note
        textarea
          min-width 280px
          min-height 140px
      .popover-header
        padding 10px 0 20px
        display table
        width 100%
        .title
          font-weight normal
          display table-cell
          font-size 16px
          line-height 20px
          vertical-align top
          width 100%
          margin-right 40px
        .icon-close
          cursor pointer
          display table-cell
          font-size 20px
          float right
