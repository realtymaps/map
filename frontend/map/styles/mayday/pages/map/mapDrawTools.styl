$fnMakeMapDrawTools()

  .draw-tools
    width 100%
    position absolute
    z-index 20
    background-color $charcoal
    color $white
    height 50px

    .text
      margin-top 4%

    .close-btn
      margin-top 2%

    .tools
      button
        display inline

    .nav-button
      font-size 28px

    .btn-transparent
      height 50px
      width 50px
      background-color transparent
      color $white

      &:hover
        background-color transparent

    /*Want to slide down*/
    &.ng-enter
    &.ng-leave
      transition 1s linear all
      -webkit-transition 1s linear all

    &.ng-enter
    &.ng-leave.ng-leave-active
      opacity 0

    &.ng-leave
    &.ng-enter.ng-enter-active
      opacity 1
