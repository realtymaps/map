$fnMakeMapProjects()
  .projects-list
    >button
      height 50px
      position relative
      width 220px
      @media (min-width: md)
        width 220px
      &:before
        content ""
        height 20px
        left 0
        margin-top -10px
        position absolute
        top 50%
        width 3px
        background $light_blue
      > span
        .icon-project
          text-align left
          font-size 20px
          line-height 28px
          float left
        h4
          margin 0 30px 0 40px
          font-size 12px
          font-weight bold
          line-height 30px
          text-align left
          display block
          color $black
          overflow: hidden
          text-overflow: ellipsis

  .projects-tools
    >.btn-group
      &.opened
        button.btn
          border-bottom-left-radius  0
          -moz-border-bottom-left-radius 0
          -webkit-border-bottom-left-radius 0
          -o-border-bottom-left-radius 0
          border-bottom-right-radius 0
          -moz-border-bottom-right-radius 0
          -webkit-border-bottom-right-radius 0
          -o-border-bottom-right-radius 0
