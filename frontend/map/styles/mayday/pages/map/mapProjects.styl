$fnMakeMapProjects()
  .projects-list
    &.dropdown.open
      .dropdown-menu
        @extends .fallDown
    >button.btn.btn-transparent
      background transparent
      height 50px
      position relative
      width 220px
      @media (min-width: md)
        width 220px
      > span
        .icon-project
          text-align left
          font-size 20px
          line-height 28px
          float left
        h4
          margin 0 30px 0 0
          font-size 14px
          font-weight bold
          line-height 30px
          text-align left
          display block
          overflow: hidden
          text-overflow: ellipsis

  .map-navigation
    >.btn-group
      >.btn.btn-transparent
        background-color rgba(255,255,255,0.9)
      &.opened
        button.btn
          border-bottom-left-radius  0
          -moz-border-bottom-left-radius 0
          -webkit-border-bottom-left-radius 0
          -o-border-bottom-left-radius 0
          border-bottom-right-radius 0
          -moz-border-bottom-right-radius 0
          -webkit-border-bottom-right-radius 0
          -o-border-bottom-right-radius 0
