#history
  @extends .font-regular
  .inner
    height:100%;
    overflow scroll

    ul.timeline
      list-style none
      padding 0
      &:before
        border-left 2px solid $gray_ligther
        content ""
        height 100%
        left 40px
        position absolute
        width 1px
        z-index -1

      li.item
        list-style none
        h3
          .label-default
            background $dark_blue
            font-weight normal
          span
            display inline-block
            font-size 12px
            max-width 140px
            min-width 140px
            padding 10px
            text-transform uppercase
        ul.activity
          margin-left 25px
          padding-left 60px
          list-style none
          li
            list-style none
            border-bottom 1px solid $gray_ligther
            padding 30px 0
            position relative
            @extends .notice-dot-blue

            &:before
              border-color $white
              left -64px
              top 48px

            .avatar
              min-width 60px
              float left
              display table-cell
              .label
                padding 10px
                background $light_blue

            .data
              width 100%;
              margin-left 60px
              float none
              display table-cell
              h4
                margin 0 0 20px 0
              p
                color $text_gray
              span.date
                color $gray_ligther
                font-size 12px
                font-weight bold



