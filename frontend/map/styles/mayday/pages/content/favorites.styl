@import '../../../components/propertiesAttr.styl'

.content .data
  .favorites, .pinned
    list-style none
    padding 0
    margin 0
    .fa
      color $black
    li
      padding 10px
      .property-card
        box-shadow 0px 2px 3px rgba(0,0,0,0.15)
        overflow hidden
        .property-img
          max-height 200px
          overflow hidden
          position relative
          .property-status
            position absolute
            left 0
            bottom 0
            background-color $white
            padding 10px
            font-weight bold
            color $white
            text-transform uppercase
            &.pending
              background-color $yellow
            &.sold
              background-color $red
            &.for.sale
              background-color $green
          img
            display inline-block
            max-width 100%

        .property-data
          padding 10px
          .price
            font-size 20px
            font-weight bold
            margin-bottom 10px
            display block
            &.pending
              color $yellow
            &.sold
              color $red
            &.for.sale
              color $green

          $fnMakePropertyAttr()

      .actions
        button
          width 50%
          float left
          border-top 1px solid $gray_ligther
          border-bottom 1px solid $gray_ligther
          border-left 0 none
          border-right 0 none
          padding 10px
          background-color $white
          &:first-child
            border-right 1px solid $gray_ligther
