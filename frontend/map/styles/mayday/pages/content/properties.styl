#properties-view,
#properties
  .inner
    padding-top 20px

  .property-img
    width 100%
    margin-bottom 10px
    position relative

    .status
      background $green
      color $white
      text-transform uppercase
      bottom 0
      left 0
      display inline-block
      padding 5px 10px
      font-size 11px
      position absolute

      &.pending
        background $yellow

      &.sold
        background $red

    img
      max-width 100%
      display inline-block

  .price
    margin 0
    font-size 18px
    font-weight bold
    padding 0 10px
    color $green
    &.pending
      color $yellow
    &.sold
      color $red

  .property-attr
    padding 0 10px
    list-style none
    display inline-block
    ul.attr
      padding 0
      margin 5px -4px
      li
        list-style none
        display inline-block
        border-right 1px solid $black
        border-bottom none
        padding 0 4px
        font-size 12px
        &:last-child
          border none
  .title
    padding 0 10px
    margin 0 0 5px 0
    a
      padding 0
      text-decoration none
      &:hover
      &:focus
        color $light_blue
  .location
    padding 0 10px
    color $gray
    font-size 12px
    font-weight bold
  .btn-actions
    overflow hidden
    border-top 1px solid $darker_white
    button
      font-size 12px
      border none
      border-right 1px solid $darker_white
      background $white
      padding 0
      width 50%
      float left
      min-width 10px
      &:last-child
        border none
  .nav-tabs
    display none
/*list*/
#properties
  .property-img
    margin 20px 0

#properties-view
  position relative

  .tab-content
    overflow hidden

  .property-img
    height 420px
    overflow hidden
    .status
      font-size 24px

  .property-heading
    border-bottom 1px solid c_gray_ligther
    padding 10px
    .pinto
      line-height 0px
      vertical-align middle
      height 34px
      border 0 none
      background-color transparent
      span
        font-size 20px
        vertical-align middle


  .property-description
    border-bottom 1px solid c_gray_ligther
    padding 10px

  .property-owner
    border-bottom 1px solid c_gray_ligther
    padding 10px
    p
      margin-bottom 20px
      display block
      font-size 18px

  .description
    margin-bottom 20px

  .property-attr
    ul.attr
      li
        width 50%
        float left
        border 0 none
        margin-bottom 20px
        font-size 12px
        color c_gray
        span
          color c_black
          font-size 24px
          display block

  .property-additional
    padding 10px
    padding-bottom 10px
    border-bottom 1px solid c_gray_ligther
    margin-bottom 20px

  span.label
    color c_gray
    margin 0 0 5px 0
    display block
    text-align left
    font-weight normal
    padding 0

  .border-right
    position relative
    &:after
      border-right 1px solid c_gray_ligther
      bottom 10px
      content ""
      position absolute
      right -1px
      top 10px

  .border-left
    position relative
    &:after
      border-right 1px solid c_gray_ligther
      bottom 10px
      content ""
      position absolute
      left 0
      top 10px
      z-index 8

  .price
    padding 0
    font-size 32px
    margin-bottom 10px
  .title
    padding 0
    font-size 20px
  .location
    padding 0


