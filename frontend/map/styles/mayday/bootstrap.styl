/*global*/
.container-fluid
  @media (max-width: xs-1)
    padding 0 10px

/*dropdowns*/

.dropdown
  display inline-block

  &.open
    z-index 99
    .dropdown-menu
      @extends .slideFromTop
      &.whiteblock
        @extends .slideFromTop
      &.blueArrow
        @extends .fallDown



@-moz-document url-prefix()
  .dropdown
    &.open
      perspective 500px

.dropdown-menu
  background-color c_dark_blue
  background c_dark_blue
  box-shadow 0 0 0 c_black_0
  color c_white
  border none
  margin-top 15px
  width 100%
  overflow hidden
  &.right
    right 0
    left inherit
    width auto

  &.arrow
    overflow visible

    &:before
      content ''
      width 0
      height 0
      border-style solid
      border-width 0 10px 10px 10px
      border-color transparent transparent c_dark_blue transparent
      position absolute
      top -9px
      right 22px

    &.blueArrow
      padding-top 0

      &:before
        border-style solid
        border-width 0 10px 10px 10px
        border-color transparent transparent c_light_blue transparent
      h4.title
        background c_light_blue
        color c_white
        font-size 14px
        padding 10px
        margin-top 0

  li
    border-bottom 1px solid c_dark_blue_active
    &:last-child
      border none
    a
      padding 5px 20px
      color c_white_60
      text-transform capitalize
      @extends .global-transition
      &:hover
      &:focus
        background c_dark_blue_active
        color c_white
  &.no-margin
    margin 0
  &.whiteblock
    background-color c_white
    background c_white
    color c_black
    padding 0
    border-radius 0px 0px 3px 3px
    box-shadow 0 2px 2px c_black_30
    li
      border-bottom 1px solid c_gray_ligther
      &:last-child
        border 0
      a
        color c_dark_blue
        &:hover
        &:focus
          background c_light_blue_select

  &.white
    background-color c_white
    background c_white
    box-shadow 0px 1px 2px c_black_20
    color c_black

  &.btnblock
    background transparent
    li
      border none
      margin-bottom 20px

/*Buttons*/
button
  &:hover
    .caret
      border-top-color c_light_blue
  &:hover
  &:active
  &:focus
    outline none!important


.caret
  border-left 8px solid transparent
  border-right 8px solid transparent
  border-top 8px dashed
  display inline-block
  height 0
  margin-left 2px
  margin-top -5px
  position: absolute
  right 20px
  top 50%
  width 0
  z-index 999
  @extends .global-transition

  &:hover
    border-top-color c_light_blue

.btn
  border none
  @extends .global-transition
  &:hover
  &:focus
    border none
  &.btn-primary
    background-color c_light_blue
    border 1px solid c_blue

    &:hover
    &:focus
      background-color c_blue

  &.btn-default
    background-color c_def_btn_gray
    border 1px solid c_def_btn_gray_border

  &.btn-white
    background c_white
    border 1px solid c_black_20
    &.active
    &:hover
    &:active
      box-shadow 0 0 0 c_black_0
      background c_light_blue
      color c_white
      border-color c_blue

  &.btn-transparent
    background-color c_white_70
    border-radius 3px;
    box-shadow 0px 1px 2px c_black_40

    &:hover
    &:active
      background c_white
      z-index 0

  &.btn-selected
    background c_white
    border 1px solid c_light_blue
    color c_light_blue
    &.active
    &:hover
    &:active
      box-shadow 0 0 0 c_black_0
      background c_light_blue
      color c_white
      border-color c_blue

  &.btn-forsale
    background c_white
    border 1px solid c_green
    color c_green

  &.btn-pending
    background c_white
    border 1px solid c_yellow
    color c_yellow

  &.btn-sold
    background c_white
    border 1px solid c_red
    color c_red

  &.btn-offmarket
    background c_white
    border 1px solid c_light_blue
    color c_light_blue

  &.btn-inactive
    background c_white
    border 1px solid c_gray_ligther
    color c_gray

    &:before
      background-color transparent
      border-radius 2px
      color c_white
      content ""
      bottom 5px
      left 5px
      position: absolute
      top 5px
      right 5px
      z-index 0
      transform scale(.2)
      @extends .global-transition

    &[aria-expanded="true"]
    &.active
      color c_white!important
      position relative

      span
        position relative
      &:before
        background-color c_light_blue
        transform scale(1)

  &.btn-stamp
    width 100%
    line-height 600%
    border 1px dashed c_gray_ligther
    background-color c_dark_white
    color c_gray
    border-radius 3px
    &:hover
    &:focus
      color c_light_blue

  &.btn-filter
    background none
    color c_gray
    min-width auto
    margin 5px 10px
    padding 3px 0
    border-radius 0px
    border-bottom 2px solid c_white_0
    &:hover
    &:focus
      color c_light_blue
    &.active
      border-bottom 2px solid c_light_blue
      box-shadow 0px 0px 0px c_black_0
      color c_black
      font-weight bold

  &.btn-text
    min-width 1px
    &.active
      background-color c_light_blue
      color c_white
      box-shadow 0 0 0 c_white_0
      border 1px solid c_blue

  &.btn-icon
    background 0 none
    border-radius 0

  &.btn-circle
    background-color c_black_10
    border-radius 10000px
    font-size 0
    min-width 0
    width 40px
    height 40px
    padding 5px
    float left
    display block
    box-shadow 0px 0px 1px c_black
    margin-right 10px

    &.active
      border 4px solid c_light_blue

    &.color-black
      background-color c_black
    &.color-blue
      background-color blue
    &.color-green
      background-color green
    &.color-red
      background-color red
    &.color-yellow
      background-color yellow
    &.color-white
      background-color c_white


.btn
  &:hover
    .icon
      color c_light_blue

  &.toggle-active
    position relative

    .icon
      position relative
      z-index 999

    &:before
      content ''
      position absolute
      background-color c_light_blue
      left 3px
      top 3px
      right 3px
      bottom 3px
      border-radius 3px
      opacity 0
      transform scale(0)
      @extends .global-transition

    &[aria-expanded="true"]
      .icon
        color c_white !important

      &:before
        opacity 1
        transform scale(1)


.btn-group
  .btn
    min-width 0px

.row
  &.equal-height
    display table
    width 100%
    div[class*="col-"]
      display table-cell
      float none

ul.nav-tabs
  margin-bottom 50px
  li
    margin 0
    a
      border none
      margin 0
      border-bottom 4px solid c_white_0
      color c_gray
      font-size 16px
      &:hover
      &:focus
        border none
        border-bottom 4px solid c_light_blue
        background none

    &.active
      a
        border none
        border-bottom 4px solid c_light_blue
        &:hover
        &:focus
          border none
          border-bottom 4px solid c_light_blue
          background none

  &.nav-justified
    li
      margin 0
      a
        border none
        margin 0
        border-bottom 4px solid c_white_0
        border-radius 0px
        &:hover
        &:focus
          border none
          border-bottom 4px solid c_light_blue
          background none

      &.active
        a
          border none
          border-bottom 4px solid c_light_blue
          &:hover
          &:focus
            border none
            border-bottom 4px solid c_light_blue
            background none
    &:after
      content ''
      border-bottom 1px solid c_gray_ligther
      width 100%
      margin 0 -15px
form
  .btn
    min-width 120px

  .form-section
    overflow hidden
    margin-bottom 20px
    border-top 1px solid c_gray_ligther
    padding 10px

p.required
.required:after
    content "*"
    color red
p.required
  font-size 10px

.btn-group
  .btn
    &.btn-transparent
      border-right 1px solid c_black_10
      &:last-child
        border 0 none
    .caret
      @extends .global-transition

  &.open
    .dropdown-toggle
      background c_white
      box-shadow 0px 1px 2px c_black_40

      .caret
        transform rotate(180deg)

.pageTitle
  color c_light_blue
  font-weight normal
  margin-bottom 10px

.popover
  color c_black
  font-size 11px
  max-width none
  border-radius 2px
  border 0 none
  box-shadow 0 1px 3px c_black_30

  &.top
    margin-top -20px
    > .arrow
      border-top-color c_black_10

      &:after
        margin-left -9px
        bottom 2px

  &.right
    margin-left 20px
    > .arrow
      border-right-color c_black_10

      &:after
        margin-left 1px
        bottom -9px

  &.left
    margin-right  20px
    > .arrow
      border-left-color c_black_10

      &:after
        right 2px
        bottom -9px

  &.bottom
    margin-bottom 20px
    > .arrow
      border-bottom-color c_black_10

      &:after
        margin-left -9px
        top 2px

.modal-backdrop
  background-color c_black_50

label
  font-weight 300
  font-size 14px

.minus
  &:before
    content ''
    width 4px
    background-color c_text_gray
    height 1px
    display block
    position absolute
    left -3px
    margin 16px 0


@-moz-document url-prefix()
  .modal
    &.in
    .modal-dialog
      transform translateY(-50%) !important
      top 50%

.modal
  .modal-dialog
    .modal-content
      box-shadow 0px 2px 6px c_black_10
      border-radius 0px
      border 0 none
      border-top 3px solid c_light_blue
      padding 0 20px 20px
      .modal-header
        padding 10px 0
        display table
        width 100%
        .modal-title
          font-weight normal
          display table-cell
          width 100%
          margin-right 40px
        .icon-close
          cursor pointer
          display table-cell
          font-size 20px
          float right
      .modal-body
        padding 10px 0
      .modal-footer
        border 0 none
        padding 10px 0

select:-moz-focusring
  color transparent
  text-shadow 0 0 0 #000

.radio-inline
  div.select
    display inline-block

div.select
  position relative
  &:before
    background-color c_white
    border-radius 3px
    content ""
    height 32px
    position absolute
    pointer-events none
    right 1px
    top 1px
    width 32px
    z-index 0

  &:after
    z-index 1
    content ''
    position absolute
    top 0
    right 0
    width 0
    height 0
    pointer-events none
    border-left 4px solid transparent
    border-right 4px solid transparent
    border-top 4px solid c_black
    margin 16px
    @extends .global-transition

  &:hover
    &:after
      border-top 4px solid c_light_blue

table.table
   .noborder
     td
        border 0 none