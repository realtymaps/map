#burgericon
  @extends .hidden-s
  @extends .visible-xs
  float left
  position relative
  width 44px
  height 44px
  @media (max-width: xs-1)
    margin-left -10px

  .burger
    position absolute
    left 0
    top 10px
    cursor pointer
    padding 10px 35px 16px 0px

    span, span:before, span:after
      cursor pointer
      border-radius 5px
      height 3px
      left 12px
      width 20px
      background $white
      position absolute
      display block
      content ''
      @extends .global-transition

    span
      &:before
        top -6px
        left 0
      &:after
        bottom -6px
        left 0

    &.on
      span
        background-color transparent

    &.on
      span
        &:before
          top 0
        &:after
          top 0

    &.on
      span
        &:before
          transform rotate(45deg)
        &:after
          transform rotate(-45deg)
