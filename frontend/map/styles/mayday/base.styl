  /*when properties details*/
  &.show-properties
    #map
      //@extends .moveToDown
    #content
      //@extends .growUp
      background-color c_white

  #content
    padding-top 47px
    width 100%
    height 100%
    overflow auto
    display block
    position absolute
    left 0
