@import "./header/navigation"
@import "./header/notices"
@import "./header/search-field"
@import "./header/userblock"
@import "./mobile-nav"

html, body
  position absolute
  min-height: 100% !important
  height 100%
  width 100%

html
  cursor default
  background $c_dark_blue_darker
  // @extends .font-regular

h1.logo
  margin 0 35px 0 15px
  float left
  @media (max-width: xs-1)
    margin 0 20px 0 0
  a.logo
    font-size 0px
    background url('/assets/base/logo_130x15.png') no-repeat center center transparent
    width 130px
    height 44px
    display block

.propertyMarker
  box-sizing border-box
  background #05F24C
  box-shadow 2px 2px 4px #333
  border 5px solid #346FF7
  height 20px
  width 20px
  border-radius 10px
  -webkit-animation pulse 1s ease 1s 3
  -moz-animation pulse 1s ease 1s 3
  animation pulse 1s ease 1s 3

.mobile-page
  background $c_dark_blue_darker
  position absolute
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  @extends .global-transition
  &.on
    left "calc(100% - %s)" % mobileNavOffset

header.site-header
  display block
  position absolute
  left 0
  top 0
  right 0
  z-index 4
  height 50px
  background c_dark_blue
  box-shadow inset 0px -3px 0px c_gray_ligther

  .inner
    float left
    width 100%

    $fnMakeNav()
    $fnMakeSearchField()
    $fnMakeNotices()
    $fnMakeUserBlock()

@media screen and (-webkit-min-device-pixel-ratio:0)
  .site-main
    .inner
      // perspective 2000px

.site-main
  position absolute
  background-color c_white
  height 100%
  overflow auto
  color c_black

  label, input, .page-header
    color c_black

  #mail
  #history

  /*when properties details*/
  &.show-properties
    #content
      //@extends .growUp
      background-color c_white

  #content
    padding-top 47px
    width 100%
    height 100%
    overflow auto
    display block
    position absolute
    left 0
    top 0
    background-color c_white
    //@extends .moveToDown
