@import "./header/navigation"
@import "./header/notices"
@import "./header/search-field"
@import "./header/userblock"
@import "./mobile-nav"

body
html
  overflow-x hidden
  width 100%
  cursor default
  background c_dark_blue_darker
  // @extends .font-regular

h1.logo
  margin 0 35px 0 15px
  float left
  @media (max-width: xs-1)
    margin 0 20px 0 0
  a.logo
    font-size 0px
    background url('/assets/base/logo_130x15.png') no-repeat center center transparent
    width 130px
    height 44px
    display block

.propertyMarker
  box-sizing border-box
  background #05F24C
  box-shadow 2px 2px 4px #333
  border 5px solid #346FF7
  height 20px
  width 20px
  border-radius 10px
  -webkit-animation pulse 1s ease 1s 3
  -moz-animation pulse 1s ease 1s 3
  animation pulse 1s ease 1s 3

.page
  background c_dark_blue_darker
  position absolute
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  @extends .global-transition
  &.on
    left "calc(100% - %s)" % mobileNavOffset

.site-header
  position absolute
  left 0
  top 0
  right 0
  z-index 4
  height 47px
  background c_dark_blue
  box-shadow inset 0px -3px 0px c_gray_ligther

  .inner
    float left
    width 100%

    makeNav()
    makeSearchField()
    makeNotices()
    makeUserBlock()

@media screen and (-webkit-min-device-pixel-ratio:0)
  #site-main
    .inner
      perspective 2000px

#site-main
  background-color c_dark_blue_darker
  width 100%
  height 100%
  overflow hidden
  position relative

  .inner
    background-color c_white

  > div
    z-index 0

  &.show-map
    #map
      z-index 1

  &.show-mail
    #mail
      z-index 1

  &.show-history
    #history
      z-index 1

  &.show-content
    #content
      z-index 1
  /*
    #map
      z-index 3
    #mail
      z-index 2
    #history
      z-index 1
    #content
    z-index 0

    &.show-map
      #map
        @extends .growUp
        transform translateX(0%)

    &.show-mail
      #mail
        @extends .growUp
        transform translateX(0%)

    &.show-history
      #history
        @extends .growUp
        transform translateX(0%)

  */
  #map
  #mail
  #history
    padding-top 47px
    width 100%
    height 100%
    overflow hidden
    display block
    position absolute
    left 0
    top 0
    //transform translateX(-100%)
