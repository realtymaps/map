body
html
  overflow-x hidden
  width 100%
  cursor default
  background c_dark_blue_darker
  // @extends .font-regular

h1.logo
  margin 0 35px 0 15px
  float left
  @media (max-width: xs-1)
    margin 0 20px 0 0
  a.logo
    font-size 0px
    background url('/assets/base/logo_130x15.png') no-repeat center center transparent
    width 130px
    height 44px
    display block

.propertyMarker
  box-sizing border-box
  background #05F24C
  box-shadow 2px 2px 4px #333
  border 5px solid #346FF7
  height 20px
  width 20px
  border-radius 10px
  -webkit-animation pulse 1s ease 1s 3
  -moz-animation pulse 1s ease 1s 3
  animation pulse 1s ease 1s 3

#page
  background c_dark_blue_darker
  position absolute
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  overflow hidden
  @extends .global-transition
  &.on
    left "calc(100% - %s)" % mobileNavOffset

#site-header
  position absolute
  left 0
  top 0
  right 0
  z-index 4
  height 47px
  background c_dark_blue
  box-shadow inset 0px -3px 0px c_gray_ligther

  .inner
    float left
    width 100%

    #navigation
      float left
      .nav-toggle
        font-size 0
        display none
        position absolute
        right 0
        @extends .visible-xs
        span
          background url(/assets/base/icons/mobile_main_navigation.png) no-repeat center center transparent
          width 44px
          height 44px
          display block
          cursor pointer

      ul.nav
        float left
        li
          display inline-block
          margin 0
          float left
          @extends .global-transition
          a
            color c_white_50
            text-transform capitalize
            line-height 47px
            padding 0 10px
            @extends .global-transition
            &:hover
            &:active
            &:focus
              background c_black_0
            span
              display: inline-block;
              padding: 0 10px;
              position: relative;

          &.active
            a
              color c_white
              &:after
                content ''
                height 3px
                background c_light_blue
                width 100%
                position absolute
                left 0
                bottom 3px
          &.inbox
            a
              span
                @extends .notice-dot-blue

        @extends .hidden-xs
        &.on
          @extends .visible-xs
          @extends .slideFromTop
          background c_dark_blue_darker
          float: none;
          left: 0;
          position: absolute;
          top: 47px;
          width: 100%;
          li
            display block
            width 100%

    #search-field
      float right
      margin 0 20px 0 0
      button.search-btn
        color c_white
        font-size 26px
        line-height 0px
        padding 8px
        min-width auto
        float left
      .search
        float left
        border-bottom 1px solid c_gray
        padding 4px 0
        margin 8px 0
        width 0px
        position relative
        z-index 0
        @extends .global-transition

        &:after
          content ''
          right -300px
          position absolute
          top 0
          height 30px
          background c_dark_blue
          width 300px
          pointer-events none
          z-index 0

        &.opened
          width 280px
          border-bottom 1px solid c_light_blue

        .search-content
          display block
          float left
          width 281px

        .search-type
          float left
          min-width 100px
          .dropdown

            .dropdown-menu
              border-radius 0
              padding 0
              top 14px
              box-shadow 0px 1px 3px c_black_30
              li
                padding 10px
                cursor pointer
                background c_white
                border-bottom 1px solid c_gray_ligther
                color c_black
                @extends .global-transition
                span.icon
                  font-size 16px
                  margin-right 5px
                &:hover
                &:focus
                  background c_light_blue
                  color c_white

            button
              margin-right 3px
              position relative
              height 21px
              border-radius 0
              border 0 none
              padding 0px 16px 0 0
              background transparent
              color c_white

              &:hover
              &:focus
                color c_light_blue

              span
                display inline-block
                margin 0
                &.caret
                  right 3px
                  margin-top -2px
                  border-left 5px solid transparent
                  border-right 5px solid transparent
                  border-top 5px dashed
                  z-index 0
        input#search
          background transparent
          float left
          width auto
          border-radius 0
          border 0 none
          height 21px
          line-height 12px
          padding 0
          color c_white
          &:hover
          &:focus
          &:active
            box-shadow 0 0 0 c_black_0

    #notices
      float right
      display block
      position relative
      z-index 1
      @extends .hidden-xs
      button.icon-bell
        font-size 0px
        background url(/assets/base/notices_bell_icon_22x22.png) no-repeat center center transparent
        width 34px
        height 44px
        padding 7px
        display block
        margin 0px 15px 0px 0
        border none
        @extends .notice-dot-blue

      .block-notification
        padding 5px 10px
        min-width 280px

        .row
          margin 0
          & > div
            padding 0 5px

        h4
          span
            font-weight 100
            font-size 14px
            display inline-block
            &.name
              font-weight bold
              font-size 16px
              display inline-block
              margin-right 10px
        p
          font-size 12px
          color c_white_50
          &.date
            color c_white_20

        button.btn-primary
          padding 4px
          margin-top 10px
      .btn-actions
        padding 10px
        margin-bottom -5px
        button
          width:100%

      .dropdown
        &.open
          ul
            @extends .fallDown
    #userblock
      float right
      display block
      position relative
      z-index 1
      @extends .hidden-xs
      button.avtr
        background c_dark_blue_active
        border none
        padding 7px
        font-size 14px
        margin 5px 15px 5px 0
        width 34px
        height 34px
        text-align center
        color c_white_80
        text-transform uppercase
        border-radius 5px
        cursor pointer
      .block-become-a-member
        padding 10px
        margin-bottom -5px
        h4,p
          padding 0 10px
        h4
          font-size 12px
          font-weight normal
          text-transform capitalize
          color c_white_40
          margin 0

      .dropdown
        &.open
          ul
            @extends .fallDown
@media screen and (-webkit-min-device-pixel-ratio:0)
  #site-main
    .inner
      perspective 2000px

