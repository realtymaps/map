/*
 * Utility Functions
 */

.no-animation
  $fnMakeAnimation(none)
  $fnMakeTransition(none)

// Create the browser specific animation entries
$fnMakeAnimation(args)
  -webkit-animation args
  -moz-animation args
  animation args

$fnMakeTransition(args)
  transition args
  -webkit-transition args

