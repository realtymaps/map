@-webkit-keyframes pulse
  40%
    -webkit-transform scale(20)
    -moz-transform scale(20)
    transform scale(20)

  100%
    -webkit-transform scale(1)
    -moz-transform scale(1)
    transform scale(1)

@-moz-keyframes pulse
  40%
    -webkit-transform scale(20);
    -moz-transform scale(20);
    transform scale(20);

  100%
    -webkit-transform scale(1)
    -moz-transform scale(1)
    transform scale(1)


@keyframes pulse
  40%
    -webkit-transform scale(20)
    -moz-transform scale(20)
    transform scale(20)


  100%
    -webkit-transform scale(1)
    -moz-transform scale(1)
    transform scale(1)

