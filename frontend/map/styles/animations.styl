  -webkit-animation-name fadeIn

  animation-duration 250ms
  -webkit-animation-duration 250ms

  animation-timing-function ease-out
  -webkit-animation-timing-function ease-out

@keyframes fadeIn
  0%
    opacity 0

  50%
    opacity .3

  100%
    opacity 1

@-webkit-keyframes fadeIn
  0%
    opacity 0

  50%
    opacity .3

  100%
    opacity 1

.slideFromTop
