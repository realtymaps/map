.menu-slide.ng-hide-remove
  make-animation(slideInLeft 0.15s both ease-in)

.menu-slide.ng-hide-add
  make-animation(slideOutLeft 0.15s both ease-in)

#mobile-nav
  position fixed
  z-index 1001
  left 0
  top 0
  width "calc(100% - %s)" % mobileNavOffset
  max-width 400px
  min-width 250px
  height 100%
  background $dark_blue_darker
  @extends .font-museo-500

  .inner
    position relative

    h1.logo
      display block
      width 100%

    ul.nav
      padding 30px 10px 30px 16px
      float left
      width 100%
      border-bottom 1px solid c_gray

      li
        a
          text-transform capitalize
          span.conut
            float right
          &.projects
          &.properties
          &.notes
          &.neighbourhoods
          &.favorites
            position relative

        a
          color $rm-menu-icon
          padding 10px

          .icon
            font-size 16px
            vertical-align bottom
          .label
            color c_gray
            font-size 16px
            font-weight normal
            margin-left 7px

          &:hover
          &:focus
            background c_black_20
            color $rm-menu-icon

        span.new
          color $light_blue
          text-transform uppercase
          margin-left 5px
          font-size 10px

        &.active
          a
            color $rm-menu-icon

  .bottom
    position fixed
    left 0
    right 60px
    bottom 0
    padding 10px 15px 10px 15px

    a
      color $rm-menu-icon
      text-decoration none
      position relative
      &:hover
      &:focus
        background $black_20
        color $rm-menu-icon
        text-decoration none

    a
      line-height 40px
      display block
      padding 0 10px 0 40px
      text-transform capitalize
      &.settings
        &:before
          content ''
          position absolute
          top 0
          left 0
          display block
          width 40px
          height 40px
          background url('/assets/base/icons/settings_icon_mobile.png') no-repeat center center
      &.realtor
        padding 0 10px 0 0

        .tiny-avatar
          float left
          display block
          width 30px
          height 30px
          margin-right 10px

// Overlay on map when Mobile menu is open
#mobile-page-overlay
  display block
  position fixed
  top 0
  left 0
  height 100%
  width 100%
  z-index 1000
  background-color rgba(0,0,0,0.4)
