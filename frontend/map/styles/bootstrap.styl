  margin-bottom 0px

.table-hover > tbody > tr:hover
  background-color: rgb(50,118,177,.90)
  color: $rm-results-hover
.panel
  background: #FFF
  margin 0
  border-radius 0
  border none

.panel > .panel-heading
  background-color $rm-medium-blue
  border none
  font-size 14px
  border-radius 0
  padding 5px 10px

.panel > .panel-body
  background #FFF
  color #000
  padding 5px
  font-size 12px
  border 1px solid rgb(157,157,157)

