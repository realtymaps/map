.modal-title, .modal-content, .modal-body, .modal-footer
  color $text_gray

  h1, h2, h3, h4, h5, h6, h7, span, p, div
    color $text_gray
    &.tooltip
      z-index 1060
      .tooltip-inner
        color $white

.modal
  .modal-dialog
    .modal-content
      box-shadow 0px 2px 6px $black_10
      border-radius 0px
      border 0 none
      border-top 3px solid $light_blue
      padding 0 20px 20px
      .modal-header
        padding 10px 0
        display table
        width 100%
        .modal-title
          font-weight normal
          display table-cell
          width 100%
          margin-right 40px
        .icon-close
          cursor pointer
          display table-cell
          font-size 20px
          float right
      .modal-body
        padding 10px 0
        overflow auto
      .modal-footer
        border 0 none
        padding 10px 0

select:-moz-focusring
  color transparent
  text-shadow 0 0 0 #000

.radio-inline
  div.select
    display inline-block

div.select
  position relative
  &:before
    background-color $white
    border-radius 3px
    content ""
    height 32px
    position absolute
    pointer-events none
    right 1px
    top 1px
    width 32px
    z-index 0

  &:after
    z-index 1
    content ''
    position absolute
    top 0
    right 0
    width 0
    height 0
    pointer-events none
    border-left 4px solid transparent
    border-right 4px solid transparent
    border-top 4px solid $black
    margin 16px

  &:hover
    &:after
      border-top 4px solid $light_blue

table.table
   .noborder
     td
        border 0 none
