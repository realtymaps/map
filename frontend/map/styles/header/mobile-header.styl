mobile-header
  position: relative;
  height: $navbarHeight;
  width: 100%;
  overflow: hidden;
  font-size: 18px;
  color: $rm-header-text;
  line-height $navbarHeight

  a
  a:hover
  a:focus
    color: $rm-header-text;

  a.mobile-header-close
    display: inline-block;
    height: 50px;
    width: 30px;
    text-align: center;

  i
    font-size: 18px

    &.icon-close
      cursor:pointer

  .mobile-header-center
    margin: 0 auto;
    width: calc(100% - 35px - 35px);
    height: $navbarHeight;

  .mobile-header-left
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    padding-left: 10px;

  .mobile-header-right
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    padding-right: 10px;
    text-align: right;

    mobile-header-target-right
      display: inline-block;

  .mobile-header-title
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    height: $navbarHeight;

  //
  // Disabled
  //
  .disabled
    cursor: not-allowed
    opacity: 0.60
