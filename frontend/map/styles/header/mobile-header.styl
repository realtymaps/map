.mobile-modal
  .navigation
    font-size: 18px;

    .nav-toggle
      font-size 0
      display none
      position absolute
      right 0
      span
        background url(/assets/base/icons/mobile_main_navigation.png) no-repeat center center transparent
        width 44px
        height 44px
        display block
        cursor pointer

    ul.nav
      float left
      li
        display inline-block
        margin 0
        float left
        a
          color $rm-header-text
          line-height $navbarHeight
          padding 0 10px
          &:hover
          &:active
          &:focus
            background $black_0
          span
            display: inline-block;
