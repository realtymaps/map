$fnMakeNotices()
  #notices
    float right
    display block
    position relative
    z-index 1
    @extends .hidden-xs
    button.icon-bell
      font-size 0px
      background url(/assets/base/notices_bell_icon_22x22.png) no-repeat center center transparent
      width 34px
      height 44px
      padding 7px
      display block
      margin 0px 15px 0px 0
      border none
      @extends .notice-dot-blue

    .block-notification
      padding 5px 10px
      min-width 280px

      .row
        margin 0
        & > div
          padding 0 5px

      h4
        span
          font-weight 100
          font-size 14px
          display inline-block
          &.name
            font-weight bold
            font-size 16px
            display inline-block
            margin-right 10px
      p
        font-size 12px
        color $white_50
        &.date
          color $white_20

      button.btn-primary
        padding 4px
        margin-top 10px
    .btn-actions
      padding 10px
      margin-bottom -5px
      button
        width:100%

    .dropdown
      &.open
        ul
          @extends .fallDown
