$fnMakeSearchField()
  #search-field
    float right
    margin 0 20px 0 0
    button.search-btn
      color $white
      font-size 26px
      line-height 0px
      padding 8px
      min-width auto
      float left
    .search
      float left
      border-bottom 1px solid $gray
      padding 4px 0
      margin 8px 0
      width 0px
      position relative
      z-index 0
      @extends .global-transition

      &:after
        content ''
        right -300px
        position absolute
        top 0
        height 30px
        background $dark_blue
        width 300px
        pointer-events none
        z-index 0

      &.opened
        width 280px
        border-bottom 1px solid $light_blue

      .search-content
        display block
        float left
        width 281px

      .search-type
        float left
        min-width 100px
        .dropdown

          .dropdown-menu
            border-radius 0
            padding 0
            top 14px
            box-shadow 0px 1px 3px $black_30
            li
              padding 10px
              cursor pointer
              background $white
              border-bottom 1px solid $gray_lighter
              color $black
              @extends .global-transition
              span.icon
                font-size 16px
                margin-right 5px
              &:hover
              &:focus
                background $light_blue
                color $white

          button
            margin-right 3px
            position relative
            height 21px
            border-radius 0
            border 0 none
            padding 0px 16px 0 0
            background transparent
            color $white

            &:hover
            &:focus
              color $light_blue

            span
              display inline-block
              margin 0
              &.caret
                right 3px
                margin-top -2px
                border-left 5px solid transparent
                border-right 5px solid transparent
                border-top 5px dashed
                z-index 0
      input#search
        background transparent
        float left
        width auto
        border-radius 0
        border 0 none
        height 21px
        line-height 12px
        padding 0
        color $white
        &:hover
        &:focus
        &:active
          box-shadow 0 0 0 $black_0
