.mobile-view
  header.site-header
    .search-field
      margin 0

      &.search-open
        width: 100vw;

      .search
        .search-input
          width: calc(100vw - 140px);

header.site-header
  .search-field
    float right
    margin 0 20px 0 0

    button.search-btn
      color $white
      font-size 26px
      line-height 0px
      padding 8px
      min-width auto
      float left

    .search
      float left
      padding 4px 0
      margin 8px 0
      border-bottom 1px solid $light_blue
      position relative
      z-index 0

      .search-content
        display block
        float left

      .search-type
        float left
        min-width 85px
        .dropdown

          .dropdown-menu
            border-radius 0
            padding 0
            top 14px
            box-shadow 0px 1px 3px $black_30
            li
              padding 10px
              cursor pointer
              background $white
              border-bottom 1px solid $gray_lighter
              color $black

              span.icon
                font-size 16px
                margin-right 5px
              &:hover
              &:focus
                background $light_blue
                color $white

          button
            font-size 14px
            margin-right 3px
            position relative
            height 21px
            border-radius 0
            border 0 none
            padding 0px 16px 0 0
            background transparent
            color $white

            &:hover
            &:focus
              color $light_blue

            span
              display inline-block
              margin 0
              &.caret
                right 3px
                margin-top -2px
                border-left 5px solid transparent
                border-right 5px solid transparent
                border-top 5px dashed
                z-index 0

      .search-input
        float left
        width 200px

        input
          font-size 13px
          background transparent
          border-radius 0
          border 0 none
          height 21px
          line-height 12px
          padding 0
          color $white
          &:hover
          &:focus
          &:active
            box-shadow 0 0 0 $black_0
