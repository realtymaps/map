/* Results Container
============================================================================= */
$listNormalWidth = 280px


$fnMakeCaret()
  span.caret
    &.active-sort
      display block
    border-left 5px solid transparent;
    border-right 5px solid transparent;
    border-top 5px dashed;
    right -4px
    top 16px
    display none

    &.asc
      transform rotate(0deg)
    &.desc
      transform rotate(180deg)

savedButton()
  .fa.fa-square.fa-lg.btn.btn-default.btn-xs
    padding 1px 1px

$fnPropertyStatus(colorProp)
  &.property-status
    {colorProp} $rmMainDarkBlue

  &.sold
    {colorProp} $rm-property-sold-red

  &.forsale
    {colorProp} $rm-property-sale-green

  &.pending
    {colorProp} $rm-property-pending-purple

  &.saved
    {colorProp} $rm-property-save-yello

  &.notsale
    {colorProp} $rm-property-notsale-blue


basicTitle()
  display: block
  color: #6B6B6B

data()
  .sqft .data, .year .data
    font-size: .7em

$fnOverrideSliderBackgroundColor()
  background-color: $rm-translucent-white

#results-slide.results-container
  @extends .slide-out-container

  width: $listNormalWidth
  height: 85%
  top: 60px
  transition: 0.15s height ease-in-out
  right: 20px
  overflow: hidden
  box-shadow: 0 2px 2px rgba(0,0,0,0.3)
  border-radius: 0 0 3px 3px
  background: $white
  @media (min-width: s)
    right:30px

  #results-list
    width: 100%
    background-color $white
    min-height 200px
    max-height 100%

  &.ng-hide-add, #results-slide.ng-hide-remove
    display: block !important

  &.ng-hide-remove, #results-slide.ng-hide-add.ng-hide-add-active
    margin-right: -500px
    opacity: 1

  &.ng-hide-remove.ng-hide-remove-active, #results-slide.ng-hide-add
    margin-right: 0
    opacity: 1

  button
    height 50px

  .filters
    display block
    background $dark_white
    border-bottom 1px solid $darker_white
    border-top 1px solid $darker_white
    padding 10px
    span
      display inline-block
      line-height 24px
      font-weight bold
      margin-right 10px
    ul
      list-style none
      display inline-block
      line-height 24px
      margin 0
      padding 0
      li
        list-style none
        display inline-block
        border none
        padding-right 20px
        cursor pointer
        position relative
        &:hover
        &:focus
          color $light_blue

          span.caret
            display block
        $fnMakeCaret()




  .inner
    max-height 85%
    overflow auto
    padding-top 10px
    padding-bottom 10px
    background $white

    ul.list
      padding 0 10px
      list-style none
      > li
        list-style none
        box-shadow 0px 1px 3px $black_30
        margin-bottom 10px

        .property-img
          img
            max-width 100%
            display inline-block

          width 100%
          margin-bottom 10px
          position relative

          .status
            color $white
            text-transform uppercase
            bottom 0
            left 0
            display inline-block
            padding 5px 10px
            font-size 11px
            position absolute

            $fnPropertyStatus(background)


        .price
          margin 0
          font-size 18px
          font-weight bold
          padding 0 10px
          $fnPropertyStatus(color)

        .property-attr
          padding 0 10px
          list-style none
          display inline-block
          ul.attr
            padding 0
            margin 5px -4px
            li
              list-style none
              display inline-block
              border-right 1px solid $black
              border-bottom none
              padding 0 4px
              font-size 12px
              &:last-child
                border none
        .title
          padding 0 10px
          margin 0 0 5px 0
          color: $dark_blue_darker
          &:hover
          &:focus
            color $light_blue
        .location
          padding 0 10px
          color $gray
          font-size 12px
          font-weight bold
        .btn-actions
          overflow hidden
          border-top 1px solid $darker_white
          button
            font-size 11px
            border none
            border-right 1px solid $darker_white
            background $white
            padding 0
            width 33.3333%
            float left
            min-width 10px
            &:last-child
              border none
