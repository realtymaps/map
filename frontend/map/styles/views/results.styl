@import '../components/property-attr-functions'
/* Results Container
============================================================================= */
$listNormalWidth = 280px


$fnMakeCaret()
  span.caret
    &.active-sort
      display block
    border-left 5px solid transparent;
    border-right 5px solid transparent;
    border-top 5px dashed;
    right -4px
    top 16px
    display none

    &.asc
      transform rotate(0deg)
    &.desc
      transform rotate(180deg)

savedButton()
  .fa.fa-square.fa-lg.btn.btn-default.btn-xs
    padding 1px 1px

basicTitle()
  display block
  color #6B6B6B

data()
  .sqft .data, .year .data
    font-size .7em

$fnOverrideSliderBackgroundColor()
  background-color $rm-translucent-white

#results-slide.results-container
  @extends .slide-out-container

  width $listNormalWidth
  height 85%
  top 60px
  transition 0.15s height ease-in-out
  right 20px
  overflow hidden
  box-shadow 0 2px 2px rgba(0,0,0,0.3)
  border-radius 0 0 3px 3px
  background $white
  padding-bottom 5px
  @media (min-width: s)
    right 30px

  #results-list
    width 100%
    background-color $white
    min-height 200px

  &.ng-hide-add, #results-slide.ng-hide-remove
    display block !important

  &.ng-hide-remove, #results-slide.ng-hide-add.ng-hide-add-active
    margin-right -500px
    opacity 1

  &.ng-hide-remove.ng-hide-remove-active, #results-slide.ng-hide-add
    margin-right 0
    opacity 1

  button
    height 50px

  .filters
    display block
    background $dark_white
    border-bottom 1px solid $darker_white
    border-top 1px solid $darker_white
    padding 10px
    font-size 13px
    span
      display inline-block
      line-height 24px
      margin-right 10px
    ul
      list-style none
      display inline-block
      line-height 24px
      margin 0
      padding 0
      li
        list-style none
        display inline-block
        border none
        padding-right 20px
        cursor pointer
        position relative
        &:hover
        &:focus
          color $light_blue

          span.caret
            display block
        $fnMakeCaret()

  #results-list-container
    max-height calc(100% - 50px)
    overflow auto
    padding 0px
    background $white

    ul.list
      padding 0 10px
      list-style none
      > li
        list-style none
        box-shadow 0px 1px 3px $black_50
        margin-bottom 10px

.property-card
  $fnMakePropertyAttr()

.property-group
  width 100%
  margin 0
  .header
    cursor pointer
    &.flex
      display flex
      align-items baseline
      justify-content space-between
  .row
    margin 0
    border-bottom 1px $gray
    > *:first-child
      padding 0
      overflow hidden
    &.unit
      min-height 90px
      overflow hidden
      display flex
  .btn-group
    display flex
    .btn
      margin 0
