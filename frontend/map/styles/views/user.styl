@import './avatar'

.cc-modal-body
  padding: 0

  form
    width: 50%
    margin: auto

.cc-form-buttons
  margin: auto
  text-align: center
  
  input
    border: 0 !important
    min-width: 80% !important
    

.user
  @extends .table-view
  .table .fa-caret-down, .table .fa-caret-up
    margin-left 4px
  .table th
    cursor pointer

  margin: auto

  .inner
    overflow: auto

  .list-group
    button
      width: 100%
      margin: 10px

  .img-thumbnail
    width: 75%
    @extends .avatar-image

  .img-crop-area
    overflow: hidden
    margin: auto

  .collapse-header
    border-bottom 1px solid $gray_lighter

  .cc-details
    margin: auto
    padding: 0 0 15px 0

    .row
      margin: auto
      padding: 0

    .cc-buttons
      padding-top: 30px
    
    h4
      font-weight: 800
      margin-bottom: 30px

    img
      width: 40px
      height: auto

    label
      color: $gray_medium
    
    label, p
      font-family: "museo_sans500"
      font-size: 14px
      font-weight: 600
      line-height: 15px
      padding: 0