#filters-slide
  transition: 0.15s all ease-in-out


#filters-slide.ng-hide-add, #filters-slide.ng-hide-remove
  display: block !important


#filters-slide.ng-hide-remove, #filters-slide.ng-hide-add.ng-hide-add-active
  margin-left: -300px
  opacity: 1

#filters-slide.ng-hide-remove.ng-hide-remove-active, #filters-slide.ng-hide-add
  margin-left: 0
  opacity: 1

/* Filters Container
============================================================================= */

/* Extra small devices (phones, up to 480px) */
/* No media query since this is the default in Bootstrap */
.filters-container
    @extends .slide-out-container
    bottom: 30px
    left: 0px
    /*overflow-y:hidden !important*/

    .btn-sm.filter-btn
        padding: 1px 2px
        line-height: 1.0
        margin-left: 5px

    .row
        margin-bottom:20px

    .inner
        overflow-y:auto !important
        height: 100%
        $fnMobileToolbarPadding()

    .label
        color:#FFF
        font-size: 18px
        font-weight: 200
        padding: 0
        display: block
        text-align: left
        margin-bottom:4px

    .title
      @extends .filters-container .label
      text-decoration: underline
      text-align: center
      font-size: 20px

    input[type="text"], select
        height: 35px
        width:100%
        border-radius:0
        border:none
        -webkit-appearance: none
        padding-left: 10px
        font-size: 20px

    input[type="checkbox"].checkbox
        display: none

    input[type="checkbox"].checkbox + label
        display: inline;
        position: relative;
        background-color: none
        border: 1px solid $rm-translucent-white

        /*label styling*/
        padding: 8px
        font-size: 16px
        font-weight: 200
        line-height: 14px
        color: $rm-translucent-white
        vertical-align: baseline
        white-space: nowrap



    input[type="checkbox"].checkbox.forSale:checked + label
        background-color: $rm_forsale
        color: #FFF
        border-color: $rm_forsale

    input[type="checkbox"].checkbox.sold:checked + label
        background-color: $rm_sold
        color: #FFF
        border-color: $rm_sold

    input[type="checkbox"].checkbox.pending:checked + label
        background-color: $rm_pending
        color: #FFF
        border-color: $rm_pending

    input[type="checkbox"].checkbox.notForSale:checked + label
        background-color: $rm_notforsale
        color: #FFF
        border-color: $rm_notforsale

    input[type="checkbox"].checkbox.saved:checked + label
      background-color: $rm_saved
      color: #b6b6b6
      border-color: $rm_saved

    input[type="checkbox"].checkbox:disabled + label
        opacity: 0.5


#filters-close
    width:35px
    height:100%
    font-size:1.3em
    position:absolute
    right:-35px


/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)
    .filters-container
      .close
        display:none

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px)
    .filters-container
      width:400px
      left: 60px
      .inner
        padding: 20px 20px $footerHeight 20px

    #results-list
      width:auto

