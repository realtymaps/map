// Project Dashboard

#project-dashboard

  $project-gutter-width = 45px;
  $project-widgets-width = 130px;
  $project-widget-width = 110px;
  $project-content-width = $project-gutter-width * 2 + $project-widgets-width;

  background-color: $gray_lightest
  padding-left: 0;
  padding-right: 0;

  .project-header
    background-color: white
    padding-top: 10px;
    padding-bottom: 10px;
    margin-bottom: 15px;

    .btn
      font-size: 12px;
      padding: 3px;
      height: 30px;

  .project-title
    font-size: 26px
    margin-left: $project-gutter-width;

  .project-tools
    float: right;

  .bordered
    border: solid $rm-border-line 1px;

  //
  // Project Nav Widgets
  //

  .project-widgets
    width: $project-widget-width;
    margin-left: $project-gutter-width;
    margin-right: $project-gutter-width;
    padding: 0 0 20px 0;
    float: left;

  .project-widget
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    background-color: white;
    margin-bottom: 15px;
    text-align: center;
    font-size: 15px;

    .inner
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;

    a
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      z-index: 1;
      color: black;

  .widget-favorite
    .widget-background
      color: $rm_favorite;

  .widget-pin
    .widget-background
      color: $yellow;
      font-size: 80px;
      opacity: 0.3;

  .widget-neighborhood
    .widget-background
      color: $dark_teal;

  .widget-client
    .widget-background
      color: $green_logo;
      font-size: 85px;

  .widget-background
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    font-size: 70px;
    line-height: $project-widget-width;
    text-align: center;
    z-index: 0;
    opacity: 0.2;

  .widget-count
    font-size: 36px;
    line-height: $project-widget-width;

  .widget-title
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    text-transform: uppercase;
    font-size: 11px;

  //
  // Project Content
  //

  .project-content
    width: "calc(100% - %s)" % $project-content-width
    float: left;

  //
  // Project Top
  //

  .project-top
    margin-bottom: $project-gutter-width;

  //
  // Notes
  //

  .notes-title
    font-size: 19px;
    margin-bottom: 10px;
    text-transform: uppercase;

    a
      color: black;

  .item
    background-color: white;

  //
  // Carousel Custom Template
  //

  .pin-sample-image
    width: 500px
    height: 300px

  .pin-attributes
    width: 500px
    margin: 0 auto

  .carousel-control
    display: none;

  .carousel-indicators
    bottom: -35px;

    li
      border: 1px solid black;
      background-color: white;

      &.active
        background-color: black;


