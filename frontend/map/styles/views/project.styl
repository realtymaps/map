// Project Dashboard

#project-dashboard
  background-color: $gray_lightest

  .project-header
    background-color: white
    padding-top: 10px;
    padding-bottom: 10px;

    .btn
      font-size: 12px;
      padding: 3px;
      height: 30px;

  .project-title
    font-size: 26px

  .project-tools
    float: right;

  .project-content
    margin-top: 20px

  .project-widgets
    padding-bottom: 15px;

  .project-widget
    position: relative;
    width: 100%;
    height: 125px;
    background-color: white;
    margin-bottom: 15px;
    text-align: center;
    font-size: 16px;

    a
      position: absolute;
      top: 0;
      right: 0;
      left: 0;
      bottom: 0;
      z-index: 1;
      color: black;

  .widget-favorite
    .widget-background
      color: $rm_favorite;

  .widget-neighborhood
    .widget-background
      color: $dark_teal;

  .widget-client
    .widget-background
      color: $green_logo;
      font-size: 85px;

  .widget-background
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    font-size: 70px;
    line-height: 125px;
    text-align: center;
    z-index: 0;
    opacity: 0.2;

  .widget-count
    font-size: 32px;
    padding-top: 30px;

  .widget-title
    text-transform: uppercase;
    font-size: 12px;

  .notes-title
    font-size: 19px;
    margin-bottom: 10px;
    text-transform: uppercase;

    a
      color: black;

  .item
    background-color: white;

  // Carousel Custom Template
  .carousel-control
    display: none;

  .carousel-indicators
    bottom: -35px;

    li
      border: 1px solid black;
      background-color: white;

      &.active
        background-color: black;


