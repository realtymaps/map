@import '../mailTemplates/editor.styl'
@import '../mailTemplates/template-frags.styl'
@import '../mailTemplates/template-classes.styl'

.confirm-mail-modal
  .faded
    opacity 0.4
  .sentinel
    margin-right 10px
  .confirm-widgets
    text-align center
  .modal-footer
    border-top 1px solid $gray_lighter !important

.preview-mail-window
  .modal-body
    width 100%
    height 90%
    text-align center
    overflow scroll
    
    .waiting
      width 310px
      margin auto
      margin-top 100px
      p
        float left
        font-size: 30px
      img
        float right
        height 30px
        width 30px
      

  .iframe-preview-postcard, .modal-dialog
    width 10in
    height 90%

  .modal-content
    background-color #FFFFFF
    height 100%
    overflow auto

  .iframe-preview-letter
    width 8.5in
    height 11in
    box-shadow 4px 4px 20px #888
    border 1px solid rgba(0, 0, 0, 0.2)
    margin-bottom 25px

  .pdf-preview-letter
    width 8.5in
    height 90%
    border 1px solid rgba(0, 0, 0, 0.2)


.mail
  @extends .font-regular
  @extends .table-view

  .mail-wizard-steps
    header.send-progress
      background-color $dark_white
      padding 10px 20px
      border-bottom 1px solid $gray_lighter
      overflow hidden
      .pathway
        margin 0
        border 0 none
        ul
          margin 0
          li
            line-height 32px
            &:after
              line-height 32px

  .mail-wizard

    label, input
      color $black

    .nav-tabs li
      margin-bottom 0
      height 46px
      padding 0
      text-align center

    .nav-tabs li button
      margin-top 7px

    .btn.btn-default.active
      background-color #123d74

    .toolGroup
      width 370px
      margin auto

      .btn-toolbar
        margin 0
      button
        margin 5px
        height 2.5em

      .miscTools::before, .btn-toolbar::before
        display initial
        content initial

      .miscTools::after, .btn-toolbar::after
        clear initial

    .name-input
      border 0
      box-shadow none
      font-size 30px
      height 50px
      text-align center
      background-color #dbdee1
      border-radius 0
      font-style italic

    .name-input:hover
      background-color #cacdd0

    .recipient-info
      .send-to

        label
          display block
          font-size 18px
          line-height 2em
          border-bottom 1px solid $gray_lighter
          padding 20px
          cursor pointer

          &:last-child
            border 0 none

          input
            visibility hidden

          i
            color transparent
            margin-right 0.5em
            border 1px solid $gray
            background-color $dark_white
            border-radius 6px

          input:checked + i
            color $light_blue

          span
            display inline-block
            vertical-align top
            line-height 2em

            .total
              color $text_gray_lighter

    .select-template
      .inner .container
        width 80%
        padding-right 0
        padding-left 0

      .filters
        margin 0px -10px 20px

      ul.tmpl-list
        list-style none
        padding 0

        li
          margin-bottom 20px

        .btn
          width 100%

        .no-tmpl
          font-size 18px
          color black

        .tmpl-item
          border 1px solid white
          border-radius 3px
          padding 10px
          overflow hidden
          display table
          width 100%
          @extends .global-transition

          .tmpl-image
            min-width 123px
            height 145px
            vertical-align top
            &.selected
              border 2px solid $light_blue
              border-radius 7px
          .tmpl-data
            display table-cell
            position relative
            padding-left 15px
            padding-right 15px
            text-align center
            h3.tmpl-title
              font-size 14px
              color black
              margin 0
              display inline-block
              vertical-align top
            button
              display inline-block
              position absolute
              right 0
              bottom 0
              width 100%
              min-width 1px

          &:hover
          &:active
            border-color $light_blue

    .edit-template

      .inner .container
        width 100%
        padding-right 0
        padding-left 0

      ul.nav-tabs
        margin-bottom 0

        .nav-justified
          height 46px
          border-bottom 0

      .nav .ta-toolbar
        margin-left 0 !important

        button
          float right
          margin-right 5px

      .fontTypeTools label.btn:not(.active)
        border 1px solid white

      .edit-template-content
        padding 20px

      .edit-template-design
        padding 20px

      .btn
        min-width 0

    .review
      .review-items
        margin-left 0
        margin-right 0
        .separator
          border-top 1px solid rgb(219, 222, 225)

        .review-edit-button
          margin-top 30px
