$card-width = 325px
$card-gutter = 8px

.mobile-view
  .leaflet-bottom
    margin-bottom: 110px;

#detail-card-tray

  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100px;
  z-index: 10
  padding: 10px 0 0 0;
  overflow: hidden

  @extends .font-museo-500

  #detail-card-container
    position: relative;
    width: 100%;
    height: 100px;

  .detail-card
    cursor: pointer
    display: none;
    position: absolute;
    top: 0;
    width: $card-width;
    height: 100%;
    background: white;
    border: solid 1px #666;
    border-bottom: none;
    padding: 5px;
    transition: left 125ms ease;

  .detail-card.tray-center
    display: block;
    left: "calc(50% - %s / 2)" % $card-width

  .detail-card.tray-right
    display: block
    left: "calc(50% + %s / 2 + %s)" % ($card-width $card-gutter);

    .photo-overlay
      display: block;

  .detail-card.tray-left
    display: block
    left: "calc(50% - %s * 1.5 - %s)" % ($card-width $card-gutter);

    .photo-overlay
      display: block;

  .detail-card.hidden-right
    display: block
    left: "calc(100% + %s + %s)" % ($card-width $card-gutter);

  .detail-card.hidden-left
    display: block
    left: -1 * ($card-width + $card-gutter);

  .photo
    float left
    font-size: 6em;
    position: relative;
    width: 90px;
    height: 90px;

    .angular-google-map-street-view-panorama
      width: 100%
      height: 100%

  .photo-overlay
    background-color transparent
    position absolute
    top 0
    bottom 0
    right 0
    left 0
    z-index 1
    display none

  .card-info
    margin-left: 100px;

  .price
    font-size 18px
    color $rm-medium-blue-darker

