#detail-card-tray
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100px;
  z-index: 10
  padding: 10px 0 0 0;
  overflow: hidden

  @extends .font-museo-500

  #detail-card-container
    position: relative;
    background-color blue;
    width: 100%;
    height: 100px;

  .detail-card
    display: none;
    position: absolute;
    top: 0;
    width: 325px;
    height: 100%;
    background: white;
    border: solid 1px #666;
    border-bottom: none;
    padding: 5px;
    transition: left 125ms ease;

  .detail-card.tray-center
    display: block;
    left: calc(50% - 162px)

  .detail-card.tray-right
    display: block
    left: calc(100% - 20px);

  .detail-card.tray-left
    display: block
    left: -305px;

  .detail-card.hidden-right
    display: block
    left: calc(100% + 345px);

  .detail-card.hidden-left
    display: block
    left: -345px;

  .photo
    float left
    font-size: 6em;

  .card-info
    margin-left: 100px;

  .price
    font-size 18px
    color $rm-medium-blue-darker

