.map
  overflow hidden

.angular-leaflet-map
  height 100%
  width 100%
  position absolute
  bottom 50px
  background #e3e1de

.angular-google-map-container
    height 100%
    width 100%
    position absolute
    bottom 0
    background #e3e1de

img
  max-width none;

img[src*="gstatic.com/"], img[src*="googleapis.com/"]
  max-width none;

/*
This seems to really help with the scaling problems if markers on zoom in and out via mouse scroll

http://stackoverflow.com/questions/7471830/google-maps-api-v3-weird-ui-display-glitches-with-screenshot*/
.gm-style img
  max-width: none

.gm-style label
  width: auto; display: inline

.middle
    display table
    width 50%
    margin-left auto
    margin-right auto

/*
Use bootstraps container w/ some overrides, nice thing about this on bootstrap is there is
psuedo element with clearfix and display: table; , all after (which is why I know .middle works above)
*/

.full-width//.container
    width 100%
    padding-left 0
    padding-right 0

/*
http://stackoverflow.com/questions/1554893/google-maps-api-v3-infowindow-not-sizing-correctly
*/
.gm-style-iw
  overflow  auto !important
  max-width 300px
  max-height 175px

.gm-style-iw > div
  overflow auto !important
  max-width 300px
  max-height 175px

windowColor = rgba(45,45,63,1.0)

.custom-info-window
  box-shadow: 4px 2px 6px rgba(0,0,0,.4)
  width: 260px;


.address-label
  color: #000
  font-size: 11px !important;
  font-weight: 100 !important;
  font-family: verdana !important;

/*currently also in map.jade (this may be importable from js to css/stylus via require)*/
.manual-cluster
  color:#fff;
  font-size: 22px;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: bold;
  font-style: normal;
  text-decoration: none;
  text-align: center;
  width: 41px;
  line-height:40px;

img.manual-cluster{
  position: absolute;
  top: 0px;
  left: 0px;
  clip: rect(0px, 041px, 040px, 0px);
}

/*
Before and afters are responsible for the label tick/pointer
*/
.leaflet-marker-icon
  height 0
  overflow: visible !important
  .label
    position relative
    font-size 12px
    font-weight bold
    color rm-main-dark-blue
    border  1px solid rm-marker-border
    box-shadow 3px 3px 10px rgba(0,0,0, 0.4)
    &:after, &:before
      top 20px
      left 50%
      border solid transparent
      content " "
      height 0
      width 0
      position absolute
      pointer-events none
    &:before
      border-color transparent
      border-top-color rm-marker-border
      border-width 11px
      margin-left -11px
    &:after
      border-color transparent
      border-width 10px
      margin-left -10px
