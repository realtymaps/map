@import './results'
@import '../components/property-attr-functions.styl'

/*****************
Property Detail Modal
*****************/

.dmca-modal
  .content-label
    font-size: 12px
    color: black
  .content-value
    font-size: 12px
    line-height: 13px
    color: black
    p
      white-space: pre-wrap;
      margin: 10px 10px

.property-detail-modal
  width: 100%

  .property-detail-container
    padding-top: 25px;

    .mls-disclaimer
      .content-label
        font-size: 8px
        color: black
      .content-value
        width: 100%
        font-size: 9px
        line-height: 10px
        color: black
        p
          white-space: pre-wrap;
          margin: 10px 10px

      .mls-info
        font-size: 14px
        line-height: 14px
        margin 10px 0
      .mls-icon
        text-align: center
        margin: 10px 0
        img
          display: inline
          width: 80px
      .mls-disclaimer
        font-size: 9px
        line-height: 10px
        white-space: pre-wrap;


  .btn-actions
    margin-top: 0px;
    margin-right: -10px;

    button
      border: none;
      background: transparent;
      //font-size: 19px;

      &.button-is-pin
        color: $rm_saved

      &.button-is-favorite
        color: $rm_favorite

      &.button-has-notes
        color: $rm_note

      &.button-has-mail
        color: $rm_mail

  a.active
    background: $gray_lighter

  .subscriber-groups
    .panel-title
      font-size 22px
      &:after
        content '▶'
        font-size 50%
        vertical-align middle
      &:hover
        color $light_blue

    .panel-open
      > .panel-heading
        > .panel-title:after
          content '▼'

    .panel-heading
      background: transparent
      a
        outline 0
        &:focus
          text-decoration none

    .panel
      box-shadow none

    font-size 16px

    .table-striped-pair
      > :nth-child(4n+2)
      > :nth-child(4n+3)
        background-color $gray_lightest

    .table-striped-single
      > :nth-child(even)
        background-color $gray_lighter

    .field-label
      font-weight bold
      overflow-x hidden
      text-overflow ellipsis
    .row
      min-height 50px
      margin 0
      display flex
      align-items center

    .deed-history
      font-size 12px
      .panel-group
        margin 5px 0
      .panel
        background transparent
      .row
        min-height 25px !important
      .panel-title
        font-size 14px !important
      .panel-body
        padding 3px
      .table-striped
        font-size 12px !important

.mobile-view
  .property-detail-modal
    .property-detail-container
      padding-top: 0px;
