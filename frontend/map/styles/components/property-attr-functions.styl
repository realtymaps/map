@import '../animations.styl'

$fnPropertyStatus(colorProp)
  &.property-status
    {colorProp} $rmMainDarkBlue

  &.sold
    {colorProp} $rm_sold

  &.forsale
    {colorProp} $rm_forsale

  &.pending
    {colorProp} $rm_pending

  &.saved
    {colorProp} $rm_saved

  &.notsale
    {colorProp} $rm_notforsale

$fnMakePropertyAttr()
  margin 0
  padding 0
  p
    margin 0
    padding 0
    line-height 24px

  .property-img
    display flex
    img
      max-width 100% !important
      display inline-block
      cursor pointer

    .carousel
    .progress
      min-height 196px

    width 100%
    text-align center
    margin-bottom 0
    position relative

    .status
      color $rm_status_on_background
      text-transform uppercase
      bottom 0
      left 0
      display inline-block
      padding 5px 10px
      font-size 11px
      position absolute
      $fnPropertyStatus(background)

    .item
      padding 0
      border 0

  .price
    margin 0
    font-size 18px
    font-weight bold
    padding 0 10px
    $fnPropertyStatus(color)

  .property-attr
    font-size 12px
    list-style none
    display inline-block
    margin 0
    padding 0 10px
    ul.attr
      padding 0
      margin 5px -4px
      li
        list-style none
        display inline-block
        border-right 1px solid $black
        border-bottom none
        padding 0 5px
        &:last-child
          border none

  .title
    margin 5px 0 0
    padding 0 10px
    font-weight bold
    color: $dark_blue_darker
    &:hover
    &:focus
      color $light_blue

  .location
    padding 0 10px
    color $gray
    font-size 12px
    font-weight bold

  .status-summary
    padding 15px 0 0 10px
    font-size 12px
    .status
      list-style none
      display inline-block
      padding 0 5px 0 0
      line-height 0
      &:before
        content '‚óè'
        font-size 20px
        padding 5px 2px 0
        vertical-align bottom
      &.sold:before
        color $rm_sold
      &.forsale:before
        color $rm_forsale
      &.pending:before
        color $rm_pending

  .unit-image
    display flex
    flex-direction column
    justify-content center
    cursor pointer
    img
      width 100%
    i
      font-size 40px
      color $gray
      margin auto

  .unit-details
    display flex
    flex-direction column
    justify-content center

  .unit-number
    text-transform uppercase
    color $gray
    font-weight bold
    padding 0 10px

  .btn-actions
    overflow hidden
    border-top 1px solid $darker_white

    a
      font-size 22px
      color: $gray_medium
      border none
      border-right 1px solid $darker_white
      background-color $dark_white
      line-height 50px
      text-align center
      padding 0 0 0 6px
      width 33.3333%
      float left
      min-width 10px

    button
      position relative
      font-size 22px
      color: $gray_medium
      border none
      border-right 1px solid $darker_white
      background-color $dark_white
      padding 0 0 0 6px
      width 20%
      float left
      min-width 10px
      &:last-child
        border none

      &.button-is-pin
        color: $rm_saved

      &.button-is-favorite
        color: $rm_favorite

      &.button-has-notes
        color: $rm_note

      &.button-has-mail
        color: $rm_mail

      .button-help
        opacity: 0;
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        font-size: 11px;
        font-weight: 400;
        color: $text_gray_lightest;
        //background-color: rgba(0,0,0,0.6)

      &:hover
        .button-help
          opacity: 1;
          //$fnMakeTransition(all 0.8s ease 0.3s);
