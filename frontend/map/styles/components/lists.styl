.item-divider, .item
  position: relative;
  padding: 10px;
  border-bottom: solid 1px $rm-item-border

  &.item-border
    border-left: solid 1px $rm-item-border
    border-right: solid 1px $rm-item-border

    &:first-child
      border-top: solid 1px $rm-item-border


.item-divider
  background-color: $rm-item-divider-bg
  font-weight: 500

.item.item-card
  background-color: white;

// Derived from Ionic lists https://github.com/driftyco/ionic/blob/master/release/css/ionic.css#L6141
.item-icon-right
  padding-right: 54px;

  .item-icon
    display: -webkit-box;
    display: -webkit-flex;
    display: -moz-box;
    display: -moz-flex;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    -moz-align-items: center;
    align-items: center;
    position: absolute;
    top: 0;
    bottom: 0;
    height: 100%;
    right: 11px;
    font-size: 32px;

  .item-icon:before
    display: block;
    width: 32px;
    text-align: center;
