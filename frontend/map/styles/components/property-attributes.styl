@import "property-attr-functions.styl"

.prop-attrs
  text-align: left;

  .prop-price
  &.prop-price
    font-size 18px
    font-weight bold
    $fnPropertyStatus(color)

    &.prop-lg
      font-size 26px
      padding-bottom: 2px;

  .prop-details.horizontal
    .prop-detail
      display inline-block
      padding 0 5px
      border-right 1px solid $black

      &:first-child
        padding-left 0

      &:last-child
        border none

  .prop-detail
    font-size: 12px;
    color: $rm_attribute_lighter

  .prop-street
    font-weight: 600;
    font-size: 18px;

  .prop-location
    font-size: 14px;
    color $gray

.mobile-view
  .prop-attrs
    line-height: 20px;

    .prop-price
    &.prop-price
      font-size: 15px;
      font-weight: 600;

    .prop-detail
      font-size: 12px;

    .prop-street
      font-size: 12px;
      font-weight: 600;

    .prop-location
      font-size: 12px;
      font-weight: 200;

