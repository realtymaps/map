@import './property-attr-functions.styl'

.content .data
  .favorites, .pins
    list-style none
    padding 0
    margin 0
    .fa
      color $black
    li
      padding-bottom 10px
      .property-card

        $fnMakePropertyAttr()

        box-shadow 0px 2px 3px rgba(0,0,0,0.15)
        border-left 1px gray
        overflow hidden

        .property-attr
          margin 0

        .title
          padding 0 10px

        .property-img
          .status
            padding 10px
            font-weight bold
            font-size inherit

      .btn-actions
        button
          height 50px
