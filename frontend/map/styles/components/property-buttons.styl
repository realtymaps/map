.btn-actions
  button
    position: relative;
    line-height: normal;
    font-size: 22px;
    width: 40px;
    height: 40px;

    &.button-lg
      width: 50px;
      height: 50px;

    .button-help
      opacity: 0;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      font-size: 11px;
      font-weight: 400;
      color: $text_gray_lightest;
    //background-color: rgba(0,0,0,0.6)

    &:hover
      .button-help
        opacity: 1;
        $fnMakeTransition(all 0.8s ease 0.3s);
