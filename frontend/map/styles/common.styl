/* Set some basic rules */

@import "./header/navigation"
@import "./header/notices"
@import "./header/search-field"
@import "./header/userblock"
@import "./mobile-nav"

html, body
  position absolute
  min-height: 100% !important
  height 100%
  width 100%

html
  cursor default
  background $c_dark_blue_darker
  overflow:auto !important
  font: $mainFont
  // @extends .font-regular

h1.logo
  margin 0 35px 0 15px
  float left
  @media (max-width: xs-1)
    margin 0 20px 0 0
  a.logo
    font-size 0px
    background url('/assets/base/logo_130x15.png') no-repeat center center transparent
    width 130px
    height 44px
    display block

.propertyMarker
  box-sizing border-box
  background #05F24C
  box-shadow 2px 2px 4px #333
  border 5px solid #346FF7
  height 20px
  width 20px
  border-radius 10px
  -webkit-animation pulse 1s ease 1s 3
  -moz-animation pulse 1s ease 1s 3
  animation pulse 1s ease 1s 3

.mobile-page
  background $c_dark_blue_darker
  position absolute
  z-index 1
  left 0
  top 0
  width 100%
  height 100%
  @extends .global-transition
  &.on
    left "calc(100% - %s)" % mobileNavOffset

header.site-header
  display block
  position absolute
  left 0
  top 0
  right 0
  z-index 4
  height 50px
  background c_dark_blue
  box-shadow inset 0px -3px 0px c_gray_ligther

  .inner
    float left
    width 100%

    $fnMakeNav()
    $fnMakeSearchField()
    $fnMakeNotices()
    $fnMakeUserBlock()

@media screen and (-webkit-min-device-pixel-ratio:0)
  .site-main
    .inner
      // perspective 2000px

.site-main
  position absolute
  background-color c_white
  height 100%
  overflow auto
  color c_black

  label, input, .page-header
    color c_black

  /*when properties details*/
  &.show-properties
    #content
      //@extends .growUp
      background-color c_white

  #content
    padding-top 47px
    width 100%
    height 100%
    overflow auto
    display block
    position absolute
    left 0
    top 0
    background-color c_white
    //@extends .moveToDown



.inline
  display: inline-block

.tool
  for num in (1..200)
    .padding-top-{num}
      padding-top: unit(num, px)

.padding-left-5
  padding-left: 5px

.centered
  position:relative;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%)

.center-on-page
  position absolute
  top -($navbarHeight)
  bottom 0
  left 0
  right 0
  margin auto

body
    height: 100%
    width: 100%
    background: $rmMainDarkBlue
    overflow: hidden

/* Move down content because we have a fixed navbar */
body
    padding-top: $navbarHeight

.starter-template
    padding: 40px 15px
    text-align: center


#side-nav-container
    position:absolute
    left:0


/* PAGES
============================================================================= */
.page
    bottom:0
    position:absolute
    top:$navbarHeight
    width:100%


/* ANIMATIONS
============================================================================= */

.page.ng-leave
    z-index:8888
    -webkit-animation:keepStill 0.5s both ease-in
    -moz-animation:keepStill 0.5s  both ease-in
    animation:keepStill 0.5s  both ease-in

.page.ng-enter
    z-index:9999
    -webkit-animation:slideInUp 0.5s both ease-in
    -moz-animation:slideInUp 0.5s both ease-in
    animation:slideInUp 0.5s both ease-in

/* slide in from the right */
@keyframes slideInRight {
    from    { transform:translateX(100%); }
    to      { transform: translateX(0); }
}
@-moz-keyframes slideInRight {
    from    { -moz-transform:translateX(100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideInRight {
    from    { -webkit-transform:translateX(100%); }
    to      { -webkit-transform: translateX(0); }
}

/* slide out the right */
@keyframes slideOutRight {
    from    { transform: translateX(0);}
    to      { transform:translateX(100%);}
}
@-moz-keyframes slideOutRight {
    from    { -moz-transform:translateX(0); }
    to      { -moz-transform: translateX(100%); }
}
@-webkit-keyframes slideOutRight {
    from    { -webkit-transform:translateX(0); }
    to      { -webkit-transform: translateX(100%); }
}

/* slide in from the bottom */
@keyframes slideInUp {
    from    { transform:translateY(100%); }
    to      { transform: translateY(0); }
}
@-moz-keyframes slideInUp {
    from    { -moz-transform:translateY(100%); }
    to      { -moz-transform: translateY(0); }
}
@-webkit-keyframes slideInUp {
    from    { -webkit-transform:translateY(100%); }
    to      { -webkit-transform: translateY(0); }
}

/* slide in from the left */
@keyframes slideInLeft {
    from    { transform:translateX(-100%); }
    to      { transform: translateX(0); }
}
@-moz-keyframes slideInLeft {
    from    { -moz-transform:translateX(-100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideInLeft {
    from    { -webkit-transform:translateX(-100%); }
    to      { -webkit-transform: translateX(0); }
}

/* slide out from the left */
@keyframes slideOutLeft {
    from    { transform: translateX(100%);}
    to      { transform:translateX(0);}
}
@-moz-keyframes slideOutLeft {
    from    { -moz-transform:translateX(100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideOutLeft {
    from    { -webkit-transform:translateX(100%); }
    to      { -webkit-transform: translateX(0); }
}

/* keep page still */
@-webkit-keyframes keepStill {
    to { -webkit-transform:  translateX(0); }
}
@-moz-keyframes keepStill {
    to { -moz-transform: translateX(0); }
}
@keyframes keepStill {
    to { transform: translateX(0); }
}

checkbox(size)
  input[type=checkbox]
    opacity: 0
    position: absolute
    top: 0
    left: 0
    & + label
      padding-left: size+5px
      height: size
      display: inline-block
      cursor: pointer
      background: url(/assets/sprites.png) no-repeat 0 0
    &:checked + label
      background: url(/assets/sprites.png) no-repeat 0 -24px

.light-message
  color: $rm-light-gray

.margin-10
 margin 10px

form.comfy
  color: #DDD
  input[type=text]
  input[type=tel]
  input[type=email]
  input[type=password]
  input[type=submit]
  input[type=button]
  select
    padding: 8px
    color: black
    width: 100%
    height: 35px
    $border-radius 5px
    border: 2px solid #AAA
  input[type=submit],
  input[type=button]
    background-color: grey
    color: white
    padding: 2px 6px 3px
    border: 0
    font-size: 16px
    &:hover
      background-color: #666
    &[disabled=disabled]
      background-color: #556
      color: #777
      &:hover
        background-color: #556
        color: #777
  label
    font-size: 16px
    font-weight: normal
  .checkbox-replace
    checkbox(24px)
  .help-block
    color: #BBB

.spacer
  margin-top: 25px

$fnTextOverflow(dimension)
  white-space: nowrap
  overflow-{dimension}:hidden !important
  text-overflow: ellipsis
  if dimension == x
    width: 100%
  else
    height: 100%
  display: inline-block

.text-overflow-x
  $fnTextOverflow(x)

.text-overflow-y
  $fnTextOverflow(y)


.text-wrap, .text-overflow-x:hover, .text-overflow-y:hover
  overflow:auto !important
  white-space: initial
  text-overflow: initial

.position
  position: relative

/*http://stackoverflow.com/questions/211383/which-method-of-clearfix-is-best*/
$fnClearFix()
  content:"";
  display:table;
  clear:both;

for num in 5 10 15 20 25 30 35 40 45 50
  for where in left right top bottom
    .{where}-margin-{num}
      margin-{where} unit(num,'px')

$fnFooter()
  width: 100%
  background: $rm-medium-blue-darker
  height: $footerHeight
  position: absolute
  bottom: 0px

$fnFooterClose()
  float: right
  font-size: 45px
  font-weight: 100
  line-height: 1
  color: #FFFFFF
  text-shadow: 0 1px 0 #ffffff
  opacity: 1.0
  margin-right: 50px

.slide-out-container
  margin: 0 0 0 0px
  position: absolute
  height $slideoutHeight
  width: 100%
  z-index: 1000
  top: 0px
  background-color: $rm-medium-blue-darker

$fnMobileToolbarPadding()
  padding 25px 25px $footerHeight $toolBarMobileLeftPadding

$fnRevertToolbarPadding()
  padding: 0px 0px $footerHeight 0px
