// generic container stylings that are to be made available to all templates for usage of layout and style where needed

$print-margin = 0.03125in // LOB specifies safe printing margin as 1/32in
$divider-offset = 11in

.letter-body // page itself, this gets applied to <body> of html
  padding 2.7in 0.5in 0
  color black
  text-align left
  background-color $white
  font-family 'Open Sans', sans-serif
  font-weight 400
  font-size 16px
  line-height 24px

  p
    margin 0 0 12px
    &.page-break
      page-break-before always
      padding-top 0.5in // If this is changed, the logic that calculates page breaks should be changed too

.return-address-window,
.recipient-address-window
  background-color $gray_lightest
  border-radius 5px
  position absolute

.return-address-window
  left 0.625in
  top 0.5in
  width 3.25in
  height 0.875in

.recipient-address-window
  left 0.625in
  top 1.5in
  width 4.0in
  height 1.0in

.return-address-text,
.recipient-address-text
  padding 1em
  text-align left

.address-line
  text-transform uppercase
  font-family sans-serif
  font-size 0.13in
  line-height 1.5em
