#!/bin/bash
set -e

if [[ "$IS_HEROKU" == "" ]]
then
    DIR="$( cd -P "$( dirname "$0" )" > /dev/null && pwd )"
    cd "$DIR/../.."
else
    cd /app
fi


if [[ $PORT -eq 5000 ]]
then
  unset PORT
fi

if [[ "$IS_HEROKU" != "" ]]
then
  gulp $GULP_COLOR prod
  coffee ./backend/server.coffee
else
  gulp $GULP_COLOR $GULP_TARGET
fi
