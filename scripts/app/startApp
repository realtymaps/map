#!/bin/bash
set -e

SCRIPT_DIR="$( cd -P "$( dirname "${BASH_SOURCE[0]}" )" > /dev/null && pwd )/.."
ORIG_DIR=`pwd`

# make sure we start in the app dir
cd $SCRIPT_DIR/..


echo "~~~~~~~~~~~~~~~~~~~~~~~~ bounced: MAIN_DATABASE_URL=$MAIN_DATABASE_URL"
echo "~~~~~~~~~~~~~~~~~~~~~~~~ bounced: RAW_TEMP_DATABASE_URL=$RAW_TEMP_DATABASE_URL"
echo "~~~~~~~~~~~~~~~~~~~~~~~~ bounced: NORMALIZED_DATABASE_URL=$NORMALIZED_DATABASE_URL"


$SCRIPT_DIR/database/syncDb main
$SCRIPT_DIR/database/syncDb normalized

coffee $SCRIPT_DIR/misc/syncEncryptionKey.coffee

$SCRIPT_DIR/app/serve


# reset cwd
cd $ORIG_DIR
