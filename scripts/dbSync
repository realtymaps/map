#!/bin/bash
set -e


if [[ "$SKIP_DBSYNC" == "true" ]]
then
    exit 0
fi


if [ ! -n "$IS_HEROKU" ]
then
    DIR="$( cd -P "$( dirname "$0" )" > /dev/null && pwd )"
    cd "$DIR/.."
fi


echo "Ensuring fresh copy of dbsync2:"
npm install git+https://9749fad624f556150bf5c32061930fd05c021d7d:x-oauth-basic@github.com/realtymaps/dbsync2.git --force --silent

./node_modules/dbsync2/scripts/syncAll $1
