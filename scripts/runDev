#!/bin/bash
set -e

for ((i=1; i<=$#; i++))
do
    case "${!i}" in
        --clean)
            DO_CLEAN=true
            DO_INSTALL=true
            ;;
        --install)
            DO_INSTALL=true
            ;;
        --skip-dbsync)
            export SKIP_DBSYNC=true
            ;;
    esac
done


if [[ "$DO_CLEAN" == "true" ]]
then
  foreman run npm run clean
fi

if [[ "$DO_INSTALL" == "true" ]]
then
  foreman run npm install
fi

foreman start -c web=1,dbsync=0
