ui-gmap-google-map(center='map.center', zoom='map.zoom', draggable='true',
  dragging='map.dragging', bounds='map.bounds', events='map.events', options='map.options',
  pan='true', control='map.control', ng-cloak=''
)

  //ui-gmap-layer(type='TrafficLayer', show='map.showTraffic')
  //ui-gmap-layer(type='BicyclingLayer', show='map.showBicycling')
  //ui-gmap-layer(namespace='weather', type='WeatherLayer', show='map.showWeather')
  //two drag zooms for either keyboard or button
  
  ui-gmap-drag-zoom(keyboardkey='"alt"')
  ui-gmap-drag-zoom(options='map.dragZoom.options')


  ui-gmap-markers(models='map.markers', coords='"self"',
    idkey='"id"', click='map.clickedMarker', ng-cloak=''
    options='map.labelFromParcel'
    doCluster='map.doClusterMarkers')

  ui-gmap-window(coords='map.window', options="map.windowOptions")
    div(ng-cloak='') {{map.window}}

  ui-gmap-polygons(models='map.parcelBase',
    idkey='"rm_property_id"'
    path='"geom_polys_json"',
    fill="{color: '#CC6', opacity: '0.2'}",
    stroke="{ color: '#444', weight: 3, opacity: '0.3' }",
    visible='true', geodesic='true',
    fit='false', editable='false', static='true', ng-cloak='')
  
  ui-gmap-polygons(models='map.filterSummary',
    idkey='"rm_property_id"'
    path='"geom_polys_json"',
    fill="map.parcels.fill",
    stroke="{ color: '#000', weight: 2, opacity: '0.3' }",
    visible='true', geodesic='true',
    fit='false', editable='false', static='true', ng-cloak='')

  include ./map-query-draw.jade
