.page-aspect-ratio-container
  width: 100%
  padding-bottom: 129.1666666667%
  position: relative
  > .page-aspect-ratio
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%

iframe.pdf-preview
  background-color: white
  border: 0

.status-message
  margin-bottom: 10px
  color: #000
  padding: 2px 4px
  border-radius: 4px
  background-color: #EEE
  &.current
    border: 3px solid grey
    margin-bottom: 0
  &.success-message
    color: #4B4
    background-color: #EFE
  &.old-message
    color: #888
    font-style: italic
  &.error-message
    color: #B44
    background-color: #FEE
    font-style: normal
    .troubleshooting-message
      border-top: 1px solid #B44
      margin-top: 5px

.snail-modal .modal-footer
  margin-top: 0