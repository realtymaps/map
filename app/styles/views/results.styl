/* Menu Bar Controls */
/* Small devices (tablets, 768px and up) */

.control-bar
  //position: relative
  //top: 10px
  //left: 5px
  text-align: left
  width:40px
  box-shadow: 4px 2px 6px rgba(0,0,0,.4)

.cb-layer-icon, .cb-location-icon, .cb-results-icon, .cb-filters-icon, .cb-zoomin-icon, .cb-zoomout-icon
  width: 40px
  height: 40px
  position: relative
  cursor: pointer
  background: white
  fill:#FFF
  background:#0067A2

.cb-layer-icon:hover, .cb-location-icon:hover, .cb-results-icon:hover, .cb-filters-icon:hover, .cb-zoomin-icon:hover, .cb-zoomout-icon:hover
  background: #0062A0
  fill: #FFF

.cb-layer-svg, .cb-results-svg ,.cb-location-svg
  position: absolute
  top: 50%
  left: 50%
  margin-top: -16px
  margin-left: -16px

@media (min-width: 768px)
    .cb-layer-icon, .cb-location-icon, .cb-results-icon, .cb-filters-icon, .cb-zoomin-icon, .cb-zoomout-icon
        width:  80px
        height: 80px
    .cb-layer-icon:hover, .cb-location-icon:hover, .cb-results-icon:hover, .cb-filters-icon:hover, .cb-zoomin-icon:hover, .cb-zoomout-icon:hover
        width:  180px
        height: 80px
        transition: 0.25s all ease-in-out



/*****************
Results Container
*****************/

/* Extra small devices (phones, up to 480px) */
/* No media query since this is the default in Bootstrap */
.results-container
    margin: 0 0 0 0px
    position: absolute
    z-index: 2
    bottom: 0
    right: 0
    width:100%
    top:50px


#results-close
    float:left
    width:35px
    height:100%
    font-size:1.3em
    background-image: url("/assets/right-arrow-icon.png")
    background-repeat:no-repeat
    background-position:center center
    position:absolute
    left:-35px


#results-list-inner
    float: left


#results-list
    background: #e5e5e5
    overflow-y: auto
    position: absolute
    bottom: 50px
    top: 40px
    width:100%


#results-header
    width: 100%
    background: #3DDE99
    background: #3ABB8A
    background: #FFF
    height: 40px
    position: absolute
    top: 0px
    border-bottom:1px solid #CCC
    z-index: 10000


#results-header-results-count
    float: left
    width: 25%
    background: #45a0d9
    height: 100%
    color: white
    padding: 7px 10px
    font-size: 18px


#results-header-results-count-arrow
    width: 0
    height: 0
    border-left: 10px solid transparent
    border-right: 10px solid transparent
    border-top: 10px solid #45a0d9
    position: absolute
    top: 39px
    left: 10px


#results-header-right
    position:absolute
    right:20px
    color: #929292
    padding: 8px



#results-footer 
    width: 100%
    background: #123D74
    height: 50px
    position: absolute
    bottom: 0px


.card 
    position: relative
    display: block
    cursor: pointer
    width: 100%
    padding: 10px
    height: 95px
    overflow: hidden
    background-color: #fff
    border-bottom-width: 2px
    border-bottom: 1px solid #d9d9d9
    font-size:.8em
    height:65px

.selectedCard 
    background-color:rgb(191, 255, 171) !important
    background-color:rgb(208, 255, 199) !important


.card:hover
    background-color:rgb(253, 248, 226) /* cornsilk */


.card .photo
    display:inline-block
    width:100px
    height:75px
    float: left
    margin-right: 10px


.card .property-status
    text-align: center
    color:#FFF
    font-size:11px


.card .info
    display:inline-block
    width:200px


.card .info .address
    display:inline-block
    font-size: 1.3em
    color: #6B6B6B


.card .info .price
    position: absolute
    right: 10px
    display: inline-block
    font-size: 1.3em
    color: #0062A0


.card .info .beds, .card .info .baths, .card .info .sqft, .card .info .year
    float: left
    width: 50px
    font-size:1.5em
    text-align:center


.card .info .title
    font-size: .5em
    display: block 
    color:#6B6B6B


.card .info .sqft .data, .card .info .year .data
    font-size: .7em


.card.loading
    background-color: rgb(203, 255, 218)
    font-size: 1.3em
    color: #666


.card .c
    display:inline-block
    width:70px

    
#results-footer .close
    float: right
    font-size: 45px
    font-weight: 100
    line-height: 1
    color: #FFFFFF
    text-shadow: 0 1px 0 #ffffff
    opacity: 1.0
    margin-right: 14px


/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)  
    .results-container 
      width:350px
    
    .results-container .close
      display:none 
    
    #results-list
      width:auto

    .card 
      font-size:.8em
      height:65px

    .card .photo img
      width:70px
      height:50px
      overflow:hidden
      
    .card .info
      display:inline-block
      width:200px
    

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) 
    .results-container 
      width:500px
    
    #results-list
      width:auto
    
    .card 
      font-size:1.0em
      height:95px
    
    .card .photo img
      width:100px
      height:75px
      overflow:none
      
    .card .info
      display:inline-block
      width:300px
    

/* Large devices (large desktops, 1200px and up) */
@media (min-width: 1200px){}
    

