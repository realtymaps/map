/* Results Container
============================================================================= */
listNormalWidth = 500px
listMediaWidth = 350px

savedButton()
  .fa.fa-square.fa-lg.btn.btn-default.btn-xs
    padding 1px 1px

propertyStatus()
  .property-status
    color rm-main-dark-blue

  .sold
    color: rm-property-sold-red

  .forsale
    color rm-highlight-green

  .pending
    color: rm-property-pending-purple

  .saved
    color: rm-property-save-yello

  .notsale
    color: rm-property-notsale-blue


basicTitle()
  display: block
  color: #6B6B6B

data()
  .sqft .data, .year .data
    font-size: .7em

$fnOverrideSliderBackgroundColor()
  background-color: rm-translucent-white

#results-slide
  transition: 0.15s all ease-in-out

#results-slide.ng-hide-add, #results-slide.ng-hide-remove
  display: block !important


#results-slide.ng-hide-remove, #results-slide.ng-hide-add.ng-hide-add-active
  margin-right: -500px
  opacity: 1

#results-slide.ng-hide-remove.ng-hide-remove-active, #results-slide.ng-hide-add
  margin-right: 0
  opacity: 1

.below-price
    text-align: right

.save-button
   margin-left: 4px
   font-size: 12px
   &:hover
   &:focus
   &:active
     background-color: #FFF
     color: #000
   &.label-saved-property
     &:hover
     &:focus
     &:active
       background-color: rm-btn-save-yellow
       color: rm-property-save-bright-foreground

.property-status
   $border-radius(3px)
   padding: 2px 6px
   font-size: 12px
   line-height: 1.5
   display: inline-block
   text-align: center
   vertical-align: top

#results-header
  width: 100%
  background: white
  height: 40px
  position: absolute
  top: 0px
  border-bottom: 1px solid #CCC
  z-index: 10000
  .active-sort.fa-chevron-circle-up::before
  .active-sort.fa-chevron-circle-down::before
      font: normal normal normal 12px/1 FontAwesome
      margin-right: 4px

#results-header-results-count
  float: left
  background: #45a0d9
  height: 100%
  color: white
  padding: 7px 10px
  font-size: 18px

#results-header-results-count-arrow
  width: 0
  height: 0
  border-left: 10px solid transparent
  border-right: 10px solid transparent
  border-top: 10px solid #45a0d9
  position: absolute
  top: 39px
  left: 10px

#results-header-right
  position: absolute
  right: 60px
  color: #929292
  padding: 8px

#results-footer
  $footer()

#results-close
  float: left
  width: 35px
  height: 100%
  font-size: 1.3em
  position: absolute
  left: -35px

#results-footer .close
  $footerClose()

/* Extra small devices (phones, up to 480px) */
/* No media query since this is the default in Bootstrap */
.results-container
  .sort-by
    display none
  @extends .slide-out-container
  savedButton()
  propertyStatus()
  $fnMobileToolbarPadding()
  padding-left 41px
  bottom: 0
  right: 0

  .city-state-zip
    font-size: 12px
    color: #4D4D4D

  .quick-summary
    padding-left: 25px
    margin-top: -5px

  .gridStyle
    border: 1px solid rgb(212, 212, 212);
    width: 400px;
    height: 300px

  .results-sort-btn.fa
    color: black
    height 22px
    margin-left 5px

  /*.results-list-inner*/
  /*button*/
  .active-sort
    background-color rm-medium-blue
    color white

  #results-list-inner
    float: left
    $fnOverrideSliderBackgroundColor()

  #results-list
    overflow-y: auto
    position: absolute
    bottom: 50px
    top: 40px
    width: 100%
    background-color white

  .result-property
    height 120px
    border-bottom 1px solid #d9d9d9
    overflow hidden

  .result-property-hovered
    background rm-results-hover

  .result-property:hover
    @extend .results-container .result-property-hovered

  .card
    position relative
    display block
    cursor pointer
    width 100%
    padding: 10px 10px 0 10px
    font-size 16px
    height: 100%

  .property-status
     padding 1px 5px

  .selectedCard
    background-color rgb(208, 255, 199) !important

  .photo
    display inline-block
    width 100px
    height 75px
    float left
    margin-right 10px

  .snail
    text-align center
    font-size 11px
    padding 1px 2px

  .save-button
     font-size: 11px

  .info
    display inline-block
    width 200px

  .address
    @extend .text-overflow-x
    font-size 16px
    color rm-medium-blue-darker
    width: 100%

  .address:hover
    @extend .text-overflow-x:hover

  .price
    text-align right
    position absolute
    right 50px
    display inline-block
    font-size 16px
    color rm-medium-blue-darker
    span.price-label
      font-size 8px

  .price
    text-align right

  .info
    .beds,
    .baths,
    .sqft,
    .year
      float left
      width 50px
      font-size 20px
      text-align center
    .title
      font-size: 12px
      line-height: 14px
      basicTitle()

  .card.loading
    background-color: rgb(203, 255, 218)
    font-size: 1.3em
    color: #666

  .card-buttons
    padding: 0
    position: absolute
    bottom: 7px
    left: 9px

  .card .info
    data()

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)
  .results-container
    width: listMediaWidth
    $fnRevertToolbarPadding()
    .price
      right 5px
    .close
      display: none

  #results-header-right
    right: 0px

  #results-list
    width: 100%

  .card
    font-size: .8em
    height: 65px

  .card .photo img
    width: 70px
    height: 50px
    overflow: hidden

  .card .info
    display: inline-block
    /*width: 200px*/
  .info
    margin-left -35px

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px)
  .results-container
    width: listNormalWidth
    .sort-by
      display inline

  #results-list
    width: 100%

  .card
    font-size: 1.0em
    height: 95px

  .card .photo img
    width: 100px
    height: 75px
    overflow: none

  .card .info
    display: inline-block
    width: 300px
  .info
    margin-left 0px
/* Large devices (large desktops, 1200px and up) */
//@media (min-width: 1200px)

/*********************************************************************************************************
End Results Container
**********************************************************************************************************/

.tray-close
  background-color: rgba(0, 0, 0, .45)

.tray-close-light
  background-color: rgba(0, 0, 0, .15)

.tray-close:hover
  background-color: rgba(0, 0, 0, .55)

.tray-close-light:hover
  background-color: rgba(0, 0, 0, .25)

/*****************
Detail Container
*****************/
#detail-list
  width:100%
  .container
    width: 100%

  .info .container
    data()

#detail-close
  float: left
  width: 35px
  height: 100%
  font-size: 1.3em
  background-image: url("/assets/right-arrow-icon.png")
  background-repeat: no-repeat
  background-position: center center
  position: absolute
  left: -35px

#detail-footer
  width: 100%
  background: rm-medium-blue-darker
  height: 50px
  position: absolute
  bottom: 0px
  .close
    $footerClose()

detailData()
  font-size 18px

detailTitle()
  basicTitle()
  font-size 14px

.detail-container
  savedButton()
  $fnMobileToolbarPadding()
  padding-left 41px
  @extends .slide-out-container
  z-index: 1001 /*above results by 1*/
  bottom: 0
  right: 0

  .sold-date.info.title
      margin: 0

  /* bootstraps row col defaults */
  .row
    margin-left: 0px
    margin-right: 0px
  for num in (1..12)
    .col-xs-{num}, .col-sm-{num}, .col-md-{num}, .col-lg-{num}
      padding-left: 0px
      padding-right: 0px

  propertyStatus()

  .indent
    padding-left 15px

  #detail-list-inner
    float: left
    $fnOverrideSliderBackgroundColor()

  #detail-list
    background: #FFF
    overflow-y: auto
    position: absolute
    bottom: 50px
    top: 0px

  .sk-spinner.sk-spinner-double-bounce
    /*make backgound via absolute*/
    position absolute
    top 17%
    left 50%
  .sk-spinner-double-bounce .sk-double-bounce1, .sk-spinner-double-bounce .sk-double-bounce2
    background-color rm-medium-blue-darker

  .angular-google-map-street-view-panorama
    height 300px

  .sat-map
    height 300px

  .angular-leaflet-map
    height 300px
    width 100%
    position absolute
    top 0px
    background #e3e1de

  .detail-title
    detailTitle()

  .price
    font-size 20px
    color rm-medium-blue-darker
    text-align left

  .address
    font-size 20px
    color rm-medium-blue-darker
    @extend .text-wrap

  .city-state-zip
    font-size: 14px
    color: #4D4D4D
    margin-bottom: 10px

  .quick-summary .title
    line-height: 0

  .photo
    height: 200px
    background: no-repeat url("http://placehold.it/500x300&text=image%20not%20available")

  .beds-baths-sqft
    text-align: left

  .info:hover, .data:hover
    @extend .text-overflow-x:hover

  .info, .data
    @extend .text-overflow-x
    detailData()

  .description
    @extend .detail-container .data
    @extend .text-wrap
    font-size: .8em

  .info
    margin-top: 10px
    margin-right: auto
    margin-left: auto
    padding-left: 15px

  .info .title
    detailTitle()

  .divider
    border-bottom: 1px dashed #CCC

.detail-section-title
  border-bottom: 1px solid #A7A7A7
  margin-top: 15px
  color: rgb(92, 92, 92)
  font-size: 18px
  font-weight: 200

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)

  .detail-container
    width: listMediaWidth
    .photo
      height: 300px
    .close
      display: none
    .address
      font-size: 20px
    .price
      font-size: 22px
      text-align: right
    span.price-label
      font-size: 12px

  #detail-close
    display: block

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px)

  .detail-container
    width: listNormalWidth
    $fnRevertToolbarPadding()

  #detail-close
    display: block
/*****************************************************************************************************
End Detail Container
*****************************************************************************************************/
