@import '../variables.styl'

/* Filters Container
============================================================================= */

/* Extra small devices (phones, up to 480px) */
/* No media query since this is the default in Bootstrap */
.filters-container
    margin: 0 0 0 0px
    position: absolute
    z-index: 2
    bottom: 0
    left: 60px
    width:100%
    top: 0px
    background-color: rm-medium-blue

.filters-container .label
    color:#FFF
    font-size: 18px
    font-weight: 200

.filters-container .inner{
    padding: 10px
}


#filters-close
    width:35px
    height:100%
    font-size:1.3em
    background-image: url("/assets/left-arrow-icon.png")
    background-repeat:no-repeat
    background-position:center center
    position:absolute
    right:-35px




/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)  

    
    .filters-container .close
      display:none 

    

/* Medium devices (desktops, 992px and up) */
@media (min-width: 992px) 
    .filters-container 
      width:400px
    
    #results-list
      width:auto

    

