@require 'color_scheme'

.marker-cluster-pie g.arc
  fill-opacity: 0.5

.marker-cluster-pie-label
  font-size: 18px
  font-weight: bold
  font-family: sans-serif

/*marker categories*/
.category-pending
  fill: $rm_pending
  stroke: #800
  background: $rm_pending
  border-color: #800

.category-for-sale
  fill: $rm_forsale
  stroke: #007
  background: $rm_forsale
  border-color: #007

.category-not-for-sale
  fill: $rm_notforsale
  stroke: #007
  background: $rm_notforsale
  border-color: #007

.category-recently-sold
  fill: $rm_sold
  stroke: #007
  background: $rm_sold
  border-color: #007
