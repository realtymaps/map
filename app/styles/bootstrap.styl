/*
Place for our custom Theming of bootstrap
*/
.table
  margin-bottom 0px

.table-hover > tbody > tr:hover > td,
.table-hover > tbody > tr:hover > th
  background-color: rgb(50,118,177,.90)
  color: rm-results-hover
.panel
  background: #FFF
  margin 0
  border-radius 0
  border none
  font-family "Helvetica Neue", Helvetica, Arial, sans-serif

.panel > .panel-heading
  background-color rm-medium-blue
  border none
  font-size 18px
  border-radius 0

.panel > .panel-body
  background #FFF
  color #000
  padding 5px
  font-size 14px

.panel p
  margin 0px 0px 0px 0px
.panel > .panel-body > .table tr,
.panel > .panel-body > .table td
  border-top: 1px solid rgba(0, 0, 0, 0.08)
  section > p
    display inline-block
  section > p+p /* NEXT P is margined from left to give right space*/
    margin-left 10px


/* BEGIN Nav Bar */
@media (min-width: 768px)
  .navbar > .container .navbar-brand, .navbar > .container-fluid .navbar-brand
    margin-left: 0px


.navbar
  background: rm-main-dark-blue
  border: none
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: 100
  font-size:23px
  letter-spacing: .35em


.navbar .navbar-text
  color: #777777
  font-weight: 100

.navbar .navbar-nav > li > a
  color: textColor
  height:50px

/* Small devices (tablets, 768px and up) */
@media (min-width: 768px)
  .navbar .navbar-nav .navbar-right
    position:absolute;
    right:0;

.navbar .navbar-nav > li > a:hover,
.navbar .navbar-nav > li > a:focus
  color: textColor
  background-color: #0062A0
  -webkit-transition:background-color 0.25s
  -moz-transition:background-color 0.25s
  transition:background-color 0.25s

.navbar .navbar-nav > .active > a,
.navbar .navbar-nav > .active > a:hover,
.navbar.navbar-nav > .active > a:focus
  color: textColor
  background-color: #45a0d9
  -webkit-transition:background-color 0.25s
  -moz-transition:background-color 0.25s
  transition:background-color 0.25s


.navbar-brand
  font-size: 25px
  line-height: 20px
  color: textColor !important
  padding: 3px 5px 0 3px
  letter-spacing: 4px
  font-weight: 100
  margin-right: 20px

.navbar-brand img
  height:45px
  padding: 0px 8px

.navbar-brand .logo-c1
  color: textColor

.navbar-brand .logo-c2
  color: #45a0d9

.navbar-toggle
  background-color: #255992
  border-color:transparent
  height:50px
  margin-top:0
  margin-bottom: 0
  border-radius: 0

.navbar .navbar-toggle:hover, .navbar-default .navbar-toggle:focus
  background-color: rm-medium-blue-dark

.navbar-toggle
  float: left
  margin-left: 15px

.navbar-toggle .icon-bar
  height:4px

/* END Nav Bar */


.markerLabels
  height 50px
  .label
    position relative
    font-size 12px
    font-weight bold
    color rm-main-dark-blue
    border  1px solid rm-marker-border
    box-shadow 3px 3px 10px rgba(0,0,0, 0.4)
    &:after, &:before 
      top 20px
      left 50%
      border solid transparent
      content " "
      height 0
      width 0
      position absolute
      pointer-events none
    &:before 
      border-color transparent
      border-top-color rm-marker-border
      border-width 11px
      margin-left -11px
    &:after 
      border-color transparent
      border-width 10px
      margin-left -10px

.panel > .panel-heading

  &.label-saved-property
  /.label-saved-property
    background-color rm-property-save-yello
    color rm-property-save-bright-foreground
