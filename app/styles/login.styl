@require 'common'

body
  color: #DDD

form.login
  input[type=text]
  input[type=password]
    padding: 8px
    color: black
  input[type=text]
  input[type=password]
  input[type=submit]
    width: 100%
    height: 35px
    $border-radius 5px
    border: 2px solid #AAA
  input[type=submit]
    background-color: grey
    border: 0
    font-size: 16px
    &:hover
      background-color: #666
  .row.spacer
    margin-top: 25px
  label
    font-size: 16px
    font-weight: normal
  .checkbox-replace
    checkbox(24px)
  label[for=remember_me]
    margin-top: 5px

.copyright
  margin-top: 50px
  color: grey

.logo
  height: $logo-height
  width: @height
  overflow: hidden

.errmsg
  padding-top: 10px
  padding-bottom: 10px
  background-color: darkred
  $border-radius 5px
.errmsg-wrapper
  display: none
  overflow: hidden
