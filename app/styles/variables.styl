@require 'color_scheme'

/* Set color variables */
rm-main-dark-blue = #313145
rm-medium-blue = #0062a0
rm-medium-blue-dark = #2B72BE
rm-medium-blue-darker = #123d74
rm-light-gray = #EBEBEB
rm-highlight-green = #1fde12
rm-highlight-blue = #45a0d9
rm-highlight-purple = #8C3DAA
rm-highlight-yellow = #EFEE50
rm-translucent-white = rgba(255,255,255, .5)
rm-translucent-grey = rgba(153, 153, 153, 0.79)
rm-property-save-yello = rm-highlight-yellow

/* standard parcel colors */
rm-property-sale-green = $rm_forsale
rm-property-sold-red = $rm_sold
rm-property-notsale-blue = $rm_notforsale
rm-property-pending-purple = $rm_pending
rm-sale-hover = $rm_forsale_hover
rm-sold-hover = $rm_sold_hover
rm-pending-hover = $rm_pending_hover
rm-notsale-hover = $rm_notforsale_hover

rm-property-save-bright-foreground = #303030 !important
rm-btn-save-yellow = #FFFE90
rm-marker-border = rgba(49, 49, 69, 0.6)
rm-results-hover = #c4c4c4

rm-saved-hover = #AA1



/* Set a basic variable */
base-font-size = 12px

/* Set a variable based on result of mixin call */
body-background = invert(#ccc)

windowColor = rgba(45,45,63,1.0)
textColor = white
ourBlue = #3276B1

mainFont = "Helvetica Neue",Helvetica,Arial,sans-serif

navbar-height = 50px
$slideout-height = 96%
$footerHeight = 50px
$toolBarMobileLeftPadding = 65px
