/* Set some basic rules */

.centered
  position:relative;
  top:50%;
  left:50%;
  transform:translate(-50%,-50%)

body
    height: 100%
    width: 100%
    background: main-dark-blue
    font: mainFont
    overflow: hidden

/* Move down content because we have a fixed navbar */
body
    padding-top: navbar-height

.starter-template
    padding: 40px 15px
    text-align: center


#side-nav-container
    position:absolute
    left:0


/* PAGES
============================================================================= */
.page
    bottom:0
    position:absolute
    top:navbar-height
    width:100%
    background: main-dark-blue


/* ANIMATIONS
============================================================================= */

.page.ng-leave
    z-index:8888
    -webkit-animation:keepStill 0.5s both ease-in
    -moz-animation:keepStill 0.5s  both ease-in
    animation:keepStill 0.5s  both ease-in

.page.ng-enter
    z-index:9999
    -webkit-animation:slideInUp 0.5s both ease-in
    -moz-animation:slideInUp 0.5s both ease-in
    animation:slideInUp 0.5s both ease-in


/* Slider Trays */
#results-slide
    transition: 0.15s all ease-in-out


#results-slide.ng-hide-add, #results-slide.ng-hide-remove
    display: block !important


#results-slide.ng-hide-remove, #results-slide.ng-hide-add.ng-hide-add-active
    margin-right: -500px
    opacity: 1

#results-slide.ng-hide-remove.ng-hide-remove-active, #results-slide.ng-hide-add
    margin-right: 0
    opacity: 1


#filters-slide
    transition: 0.15s all ease-in-out


#filters-slide.ng-hide-add, #filters-slide.ng-hide-remove
    display: block !important


#filters-slide.ng-hide-remove, #filters-slide.ng-hide-add.ng-hide-add-active
    margin-left: -300px
    opacity: 1

#filters-slide.ng-hide-remove.ng-hide-remove-active, #filters-slide.ng-hide-add
    margin-left: 0
    opacity: 1


/* slide in from the right */
@keyframes slideInRight {
    from    { transform:translateX(100%); }
    to      { transform: translateX(0); }
}
@-moz-keyframes slideInRight {
    from    { -moz-transform:translateX(100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideInRight {
    from    { -webkit-transform:translateX(100%); }
    to      { -webkit-transform: translateX(0); }
}

/* slide out the right */
@keyframes slideOutRight {
    from    { transform: translateX(0);}
    to      { transform:translateX(100%);}
}
@-moz-keyframes slideOutRight {
    from    { -moz-transform:translateX(0); }
    to      { -moz-transform: translateX(100%); }
}
@-webkit-keyframes slideOutRight {
    from    { -webkit-transform:translateX(0); }
    to      { -webkit-transform: translateX(100%); }
}

/* slide in from the bottom */
@keyframes slideInUp {
    from    { transform:translateY(100%); }
    to      { transform: translateY(0); }
}
@-moz-keyframes slideInUp {
    from    { -moz-transform:translateY(100%); }
    to      { -moz-transform: translateY(0); }
}
@-webkit-keyframes slideInUp {
    from    { -webkit-transform:translateY(100%); }
    to      { -webkit-transform: translateY(0); }
}

/* slide in from the left */
@keyframes slideInLeft {
    from    { transform:translateX(-100%); }
    to      { transform: translateX(0); }
}
@-moz-keyframes slideInLeft {
    from    { -moz-transform:translateX(-100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideInLeft {
    from    { -webkit-transform:translateX(-100%); }
    to      { -webkit-transform: translateX(0); }
}

/* slide out from the left */
@keyframes slideOutLeft {
    from    { transform: translateX(100%);}
    to      { transform:translateX(0);}
}
@-moz-keyframes slideOutLeft {
    from    { -moz-transform:translateX(100%); }
    to      { -moz-transform: translateX(0); }
}
@-webkit-keyframes slideOutLeft {
    from    { -webkit-transform:translateX(100%); }
    to      { -webkit-transform: translateX(0); }
}

/* keep page still */
@-webkit-keyframes keepStill {
    to { -webkit-transform:  translateX(0); }
}
@-moz-keyframes keepStill {
    to { -moz-transform: translateX(0); }
}
@keyframes keepStill {
    to { transform: translateX(0); }
}


/* Main Page
============================================================================= */


#search-bar-main
    position: relative
    width: 100%
    margin-top:50px


#search-bar-main input
    width: 100%
    height: 60px
    bottom: 50px
    border: none
    background-color: rgba(255,255,255,.10)
    border-bottom: 4px solid #FFF
    padding: 10px
    font-size: 15px
    font-weight: 100
    letter-spacing: 0.1em
    color:#FFF


#search-bar-main #btn
    color:#FFFFFF
    width:57px
    height:57px
    background-color: rgba(255,255,255,.3)
    top: 0px
    right: 0px
    position: absolute


#search-bar-main #btn:hover
    background-color: medium-blue

#search-bar-main #btn div
    font-size:20px
    text-align: center
    vertical-align: middle
    line-height: 57px


#search-bar
    position: absolute
    z-index:10000000
    box-shadow: 0 2px 6px rgba(0,0,0,0.3),0 4px 15px -5px rgba(0,0,0,0.0)

@media (min-width: 768px) {
    #search-bar-main input{
        font-size: 18px;
        letter-spacing: .2em;
        }
}

@media (min-width: 1200px) {
    #search-bar-main input{
        font-size: 20px;
        }
}



