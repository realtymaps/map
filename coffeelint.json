{
  "no_trailing_whitespace": {
    "allowed_in_comments": true
  },
  "max_line_length": {
    "value": 256,
    "level": "warn",
    "limitComments": false
  },
  "camel_case_classes": {
    "level": "error"
  },
  "no_plusplus": {
    "level": "ignore"
  },
  "no_throwing_strings": {
    "level": "warn"
  },
  "no_unnecessary_fat_arrows":{
    "level": "error"
  },
  "no_unnecessary_double_quotes":{
    "level": "ignore"
  },
  "no_interpolation_in_single_quotes":{
    "level": "error"
  },
  "no_backticks":{
    "level": "ignore"
  },
  "check_scope": {
    "module": "coffeescope2",
    "level": "warn",
    "environments": ["es5", "node", "commonjs", "mocha", "browser"],
    "globals": {
      "angular": true,
      "google": true,
      "inject": true
    },
    "overwrite": false,
    "shadow": false,
    "shadow_builtins": true,
    "shadow_exceptions": ["err", "next"],
    "undefined": true,
    "hoist_local": true,
    "hoist_parent": true,
    "unused_variables": true,
    "unused_arguments": false,
    "unused_classes": false
  }
}
